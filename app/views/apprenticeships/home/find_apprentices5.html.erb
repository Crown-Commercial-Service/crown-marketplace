<%= content_for :page_title, t('.page_title') %>
<%= content_for :page_section, t('apprenticeships.page_section') %>

<%= form_tag apprenticeships_search_results_path, method: :get do %>

  <label class="govuk-label govuk-label--xl" for="search">
    <%= t('Find an apprenticeship standard') %>
  </label>
<div class="govuk-tabs" data-module="tabs">
  <h2 class="govuk-tabs__title">
    Contents
  </h2>

  <ul class="govuk-tabs__list">
    <li class="govuk-tabs__list-item">
      <a class="govuk-tabs__tab govuk-tabs__tab--selected" href="#keyword-search">
        Search
      </a>
    </li>
    <li class="govuk-tabs__list-item">
      <a class="govuk-tabs__tab" href="#browse-route">
        Browse
      </a>
    </li>
  </ul>
   <section class="govuk-tabs__list" id="keyword-search">
        <h2 class="govuk-heading-l"><%= t('Keyword search') %></h2>
   <label class="govuk-label" for="event-name">
    Keyword search
   </label>
  <input class="govuk-input" id="event-name" name="event-name" type="text">
 <%= link_to t('.Search'), journey_start_path(journey: SupplyTeachers::Journey.journey_name), role: 'button', class: 'govuk-button govuk-button--start govuk-!-margin-top-2 govuk-!-margin-bottom-8', 'aria-label': t('Building') %>
   </section>
 <section class="govuk-tabs__panel govuk-tabs__panel--hidden" id="browse-route">
        <h2 class="govuk-heading-l"><%= t('.provider_information_title') %></h2>
        <p>

<div class="govuk-form-group">
              <fieldset class="govuk-fieldset" aria-describedby="waste-hint">
                <div class="govuk-checkboxes">
                  <% browse_routes.each do |rating| %>
                    <div class="govuk-checkboxes__item">
                      <%= check_box_tag(
                              "rating[]",
                              rating,
                              false,
                              class: "govuk-checkboxes__input",
                              id: "rating_#{rating}"
                          ) %>
                      <label class="govuk-label govuk-checkboxes__label" for="rating_<%= rating %>">
                        <%= rating %>
                      </label>
                    </div>
                  <% end %>
                </div>
        <ul class="govuk-list govuk-list--bullet">
        </ul>
 <%= link_to t('.Browse'), journey_start_path(journey: SupplyTeachers::Journey.journey_name), role: 'button', class: 'govuk-button govuk-button--start govuk-!-margin-top-2 govuk-!-margin-bottom-8', 'aria-label': t('Building') %>
      </section>


<br/>
<br/>


<% end %>
