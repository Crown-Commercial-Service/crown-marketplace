<div class="govuk-grid-row branch">
  <h2 class="govuk-heading-l"><%= branch.supplier_name %></h2>
  <div class="govuk-grid-column-one-quarter">
    <ul class="govuk-list">
      <% if branch.name.present? %>
        <li><b>Branch:</b> <%= branch.name %></li>
      <% end %>
    </ul>
  </div>
  <div class="govuk-grid-column-one-quarter">
    <p class="govuk-body">
      <%= branch.contact_name %><br />
      <%= branch.telephone_number %><br />
      <%= mail_to(branch.contact_email) %>
    </p>
  </div>
  <div class="govuk-grid-column-one-quarter">
    <% if branch.rate %>
      <p class="govuk-body govuk-!-font-size-48 markup-rate">
        <%= number_to_percentage(branch.rate * 100, precision: 1) %>
      </p>
      <p class="govuk-body-s markup-rate-units">Mark-up</p>
    <% end %>
  </div>
  <div class="govuk-grid-column-one-quarter">
    <% if branch.distance %>
      <p class="govuk-body govuk-!-font-size-48 distance">
        <%= number_with_precision(metres_to_miles(branch.distance), precision: 1) %>
      </p>
      <p class="govuk-body-s distance-units">miles</p>
    <% end %>
  </div>
</div>
