<% if errors.any? %>
  <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="error-summary">
    <h2 class="govuk-error-summary__title" id="error-summary-title">
      <%= t(".there_is_a_problem") %>
    </h2>
    <div class="govuk-error-summary__body">
      <ul class="govuk-list govuk-error-summary__list">
        <% if defined?(multiple) && multiple %>
          <% errors.keys.each do |attribute| %>
            <li>
              <%= link_to "#{errors[attribute].first}", "##{error_id(attribute)}", data: {fieldname: attribute, errortype: get_client_side_error_type_from_errors(errors, attribute).to_s } %>
            </li>
          <% end %>
        <%else %>
          <li>
            <%= link_to "#{errors[errors.keys.first].first}", "##{error_id(errors.keys.first)}", data: { fieldname: errors.keys.first, errortype: get_client_side_error_type_from_errors(errors, errors.keys.first).to_s } %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<%elsif defined?(render_empty) && render_empty %>
  <div class="govuk-error-summary govuk-visually-hidden" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="error-summary">
    <h2 class="govuk-error-summary__title" id="error-summary-title">
      <%= t(".there_is_a_problem") %>
    </h2>
    <div class="govuk-error-summary__body">
      <ul class="govuk-list govuk-error-summary__list">
      </ul>
    </div>
  </div>
<% end %>