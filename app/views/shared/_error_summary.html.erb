<% if errors.any? %>
  <%= govuk_error_summary(
    t(".there_is_a_problem"),
    errors.attribute_names.map do |attribute|
      {
        text: errors[attribute].first,
        href: "##{error_id(attribute)}",
        attributes: {
          data: {
            turbolinks: false
          }
        }
      }
    end
  ) %>
<% end %>
