<div class="govuk-!-width-three-quarters">
  <%= govuk_page_header(LayoutHelper::HeadingDetail.new(t('.heading'), @procurement.contract_name, nil, nil, nil)) %>
</div>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-one-half">
    <p>
      <%= t('.page_details_1')%>
    </p>
    <p>
      <%= t('.page_details_2')%>
    </p>
  </div>
  <div class="govuk-grid-column-one-half fm-add-buildings-container">
    <h2 class="govuk-heading-m">
     <%= t('.new_buildings')%>
    </h2>
    <p>
      <%= t('.new_buildings_details')%>
    </p>
    <%= link_to t('.add_a_building'), new_facilities_management_procurement_edit_building_path(procurement_id: @procurement.id), class: 'govuk-button govuk-button--secondary' %>
    <%= govuk_details(t('.how_it_works')) do %>
    <% end %>
  </div>
</div>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-one-half">
    <h2 class="govuk-heading-m">
      <%= t('.my_buildings') %>
    </h2>
  </div>
</div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <% if current_user.buildings.any? %>
      <table class="govuk-table">
        <thead class="govuk-table__head">
          <tr class="govuk-table__row">
            <th class="govuk-table__header govuk-!-font-weight-bold" scope="col" style="width: 55%"><%= t('.building_name_and_address') %></th>
            <th class="govuk-table__header govuk-!-font-weight-bold" scope="col" style="width: 30%"><%= t('.status') %></th>
            <td class="govuk-table__header govuk-!-font-weight-bold" style="width: 15%"></td>
          </tr>
        </thead>
        <tbody class="govuk-table__body">
          <%= f.fields_for :procurement_buildings, @procurement_buildings do |pb_field|%>
            <tr class="govuk-table__row">
              <td class="govuk-table__cell govuk-!-padding-right-2">
                <fieldset class="govuk-fieldset">
                  <%= procurement_building_row(pb_field, pb_field.object.building) %>
                </fieldset>
              </td>
              <td class="govuk-table__cell govuk-!-padding-right-2"><%= govuk_tag(*pb_field.object.building.building_status)%></td>
              <td class="govuk-table__cell govuk-!-padding-right-2"><%= link_to t('.details'), facilities_management_procurement_edit_building_path(pb_field.object.building.id, procurement_id: @procurement.id), class: "govuk-link govuk-link--no-visited-state" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= will_paginate @procurement_buildings, inner_window: 2, outer_window: 1 %>
    <% else %>
      <hr class="govuk-section-break govuk-section-break--visible">
        <p class="govuk-hint govuk-!-margin-top-2 govuk-!-margin-bottom-2">
          <%= t('.no_saved_buildings') %>
        </p>
      <hr class="govuk-section-break govuk-section-break--visible">
    <% end %>
  </div>
</div>
