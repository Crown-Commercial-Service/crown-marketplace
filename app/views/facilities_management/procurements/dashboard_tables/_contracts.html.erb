<table class="govuk-table">
  <% unless @contracts.empty? %>
    <thead class="govuk-table__head">
      <tr class="govuk-table__row">
        <th class="govuk-table__header govuk-!-font-weight-bold" scope="col" width="25%">Contract name</th>
        <th class="govuk-table__header govuk-!-font-weight-bold" scope="col" width="20%">Supplier</th>
        <th class="govuk-table__header govuk-!-font-weight-bold" scope="col" width="15%">Start date</th>
        <th class="govuk-table__header govuk-!-font-weight-bold" scope="col" width="15%">End date</th>
        <td class="govuk-table__header govuk-!-font-weight-bold" scope="col" width="25%"></td>
      </tr>
    </thead>
    <tbody class="govuk-table__body">
      <% @contracts.each do |contract| %>
        <tr class="govuk-table__row">
          <th class="govuk-table__header govuk-!-padding-right-2" scope="row">
            <%= link_to contract.procurement.contract_name, facilities_management_procurement_contract_path(procurement_id: contract.procurement.id, id: contract.id) %>
          </th>
          <td class="govuk-table__cell govuk-!-padding-right-2"><%= contract.supplier.data['supplier_name'] %></td>
          <td class="govuk-table__cell govuk-!-padding-right-2"><%= format_date(contract.contract_start_date) %></td>
          <td class="govuk-table__cell govuk-!-padding-right-2"><%= format_date(contract.contract_end_date) %></td>
          <td class="govuk-table__cell govuk-!-padding-right-2"></td>
        </tr>
      <% end %>
  </tbody>
  <% else %>
    <hr class="govuk-section-break govuk-section-break--visible govuk-!-margin-bottom-3">
      <span class="govuk-body"> <%= t('.no_live') %></span>
    <hr class="govuk-section-break govuk-section-break--visible govuk-!-margin-top-3">
  <% end %>
</table>
