<%= link_to t('.return_to_upload'), facilities_management_procurement_path(@spreadsheet_import.procurement), class: 'govuk-back-link govuk-!-margin-bottom-6' %>

<%= render partial: 'facilities_management/procurements/spreadsheet_imports/upload_status' %>

<% if @spreadsheet_import.importing? %>
  <%= link_to t('.dashboard_link'), facilities_management_procurements_path, class: 'govuk-link govuk-!-font-size-19 govuk-!-margin-top-4' %>
<% elsif @spreadsheet_import.succeeded? %>
  <%= link_to t('.continue_to_procurement'), facilities_management_procurement_path(@spreadsheet_import.procurement), class: 'govuk-button govuk-!-font-size-19 govuk-!-margin-top-4' %>
<% else %>
  <%= link_to t('.procurement_link'), facilities_management_procurement_path(@spreadsheet_import.procurement), class: 'govuk-link govuk-!-font-size-19 govuk-!-margin-top-4' %>
<% end %>