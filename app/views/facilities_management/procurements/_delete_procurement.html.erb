  <h2 class="govuk-error-summary__title" id="error-summary-title">
    <% if @procurement %>
    Are you sure you want to delete '<%= @procurement.contract_name %>'? This action cannot be un-done.
    <% else %>
    Are you sure you want to delete '<% @what_was_deleted %>'? This action cannot be un-done.
    <% end %>
  </h2>
</div>
  <%= link_to 'Confirm delete', facilities_management_procurement_path(@procurement), method: 'delete', class: "govuk-button govuk-button--warning" %>
  <%= link_to 'Cancel',  facilities_management_procurements_url, class: "govuk-button govuk-button--secondary govuk-!-margin-left-3" %>
