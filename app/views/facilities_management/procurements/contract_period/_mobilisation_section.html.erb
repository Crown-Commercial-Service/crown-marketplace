<tr class="govuk-table__row <%= 'govuk-no-border govuk-form-group--error' if mobilisation_period_error_case < 2 %>">
  <th class="govuk-table__header  <%= 'govuk-!-padding-left-2' if (@procurement.unanswered_contract_date_questions? || mobilisation_period_error_case < 2) && params[:validate] %>">
    Mobilisation period
  </th>
  <td class="govuk-table__cell">
    <% if @procurement.mobilisation_period_required %>
      <%= govuk_details(pluralize(@procurement.mobilisation_period, 'week'), true) do %>
        <%= mobilisation_period_description %>
      <% end %>
    <% else %>
      <%= mobilisation_period %>
    <% end %>
  </td>
  <td class="govuk-table__cell">
  </td>
</tr>
<% if mobilisation_period_error_case < 2 %>
  <tr class="govuk-table__row govuk-!-margin-0 govuk-!-padding-0 govuk-form-group--error">
    <td class="govuk-table__cell govuk-!-margin-0 govuk-!-padding-0 govuk-!-padding-left-2 govuk-border-top_none" colspan="3">
        <%= display_error(@procurement, [:mobilisation_period, :mobilisation_start_date][mobilisation_period_error_case], false) %>
    </td>
  </tr>
<% end %>