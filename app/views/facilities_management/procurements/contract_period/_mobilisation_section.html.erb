<tr class="govuk-table__row <%= 'govuk-no-border govuk-form-group--error' if @procurement.errors[:mobilisation_period].any? || @procurement.errors[:mobilisation_start_date].any? %>">
  <th class="govuk-table__header  <%= 'govuk-!-padding-left-2' if (@procurement.unanswered_contract_date_questions? || @procurement.errors[:mobilisation_period].any? || @procurement.errors[:mobilisation_start_date].any?) && params[:validate] %>">
    Mobilisation period
  </th>
  <td class="govuk-table__cell">
    <% if @procurement.mobilisation_period_required %>
      <%= govuk_details(pluralize(@procurement.mobilisation_period, 'week'), true) do %>
        <%= mobilisation_period_description %>
      <% end %>
    <% else %>
      <%= mobilisation_period %>
    <% end %>
  </td>
  <td class="govuk-table__cell">
  </td>
</tr>
<% if @procurement.errors[:mobilisation_start_date].any? %>
  <tr class="govuk-table__row govuk-!-margin-0 govuk-!-padding-0 govuk-form-group--error">
    <td class="govuk-table__cell govuk-!-margin-0 govuk-!-padding-0 govuk-!-padding-left-2 govuk-border-top_none" colspan="3">
      <%= display_error(@procurement, :mobilisation_start_date, false) %>
    </td>
  </tr>
<% end %>