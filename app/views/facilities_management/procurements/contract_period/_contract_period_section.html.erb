<tr class="govuk-table__row">
  <th scope="row" class="govuk-table__header  <%= 'govuk-!-padding-left-2' if @procurement.unanswered_contract_date_questions? && params[:validate] %>">Initial call-off period</th>
  <td class="govuk-table__cell">
    <%= initial_call_off_period @procurement.initial_call_off_period %>
  </td>
  <td class="govuk-table__cell">
  </td>
</tr>
<tr class="govuk-table__row <%= 'govuk-no-border govuk-form-group--error' if @procurement.errors[:initial_call_off_start_date].any? %>">
  <th class="govuk-table__header  <%= 'govuk-!-padding-left-2' if (@procurement.unanswered_contract_date_questions? || @procurement.errors[:initial_call_off_start_date].any?) && params[:validate]%>">Initial call-off period start date</th>
  <td class="govuk-table__cell">
    <%= initial_call_off_period_start_date %>
  </td>
  <td class="govuk-table__cell">
  </td>
</tr>
<% if @procurement.errors[:initial_call_off_start_date].any? %>
  <tr class="govuk-table__row govuk-!-margin-0 govuk-!-padding-0 govuk-form-group--error">
    <td class="govuk-table__cell govuk-!-margin-0 govuk-!-padding-0 govuk-!-padding-left-2 govuk-border-top_none" colspan="3"><%= display_error(@procurement, :initial_call_off_start_date, false) %></td>
  </tr>
<% end %>
<tr class="govuk-table__row">
  <th scope="row" class="govuk-table__header  <%= 'govuk-!-padding-left-2' if @procurement.unanswered_contract_date_questions? && params[:validate] %>">Initial call-off period end date</th>
  <td class="govuk-table__cell">
    <% unless @procurement.initial_call_off_period.nil? %>
      <%= format_date initial_call_off_period_end_date %>
    <% end %>
  </td>
  <td class="govuk-table__cell">
  </td>
</tr>
