<tr class="govuk-table__row <%= 'govuk-no-border govuk-form-group--error' if @procurement.errors[:initial_call_off_start_date].any? %>">
  <th class="govuk-table__header  <%= 'govuk-!-padding-left-2' if (@procurement.unanswered_contract_date_questions? || @procurement.errors[:initial_call_off_start_date].any?) && params[:validate] %>">
    Initial call-off period
  </th>
  <td class="govuk-table__cell">
    <% if @procurement.initial_call_off_period.present? %>
      <%= govuk_details(pluralize(@procurement.initial_call_off_period, 'year'), true) do %>
        <%= initial_call_off_period_description %>
      <% end %>
    <% end %>
  </td>
  <td class="govuk-table__cell">
  </td>
</tr>
<% if @procurement.errors[:initial_call_off_start_date].any? %>
  <tr class="govuk-table__row govuk-!-margin-0 govuk-!-padding-0 govuk-form-group--error">
    <td class="govuk-table__cell govuk-!-margin-0 govuk-!-padding-0 govuk-!-padding-left-2 govuk-border-top_none" colspan="3">
      <%= display_error(@procurement, :initial_call_off_start_date, false) %>
    </td>
  </tr>
<% end %>
