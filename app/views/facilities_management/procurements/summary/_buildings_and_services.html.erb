<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds govuk-hint">
    <%= t('.summary') %>
  </div>
</div>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds govuk-hint">
    <%= link_to 'Change', edit_facilities_management_procurement_path(@procurement, step: @summary_page), class: 'govuk-button govuk-button--secondary govuk-!-margin-bottom-2' %>
  </div>
</div>

<table class="govuk-table govuk-!-width-three-quarters">
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th class="govuk-table__header govuk-!-font-weight-bold" scope="col" style="width: 60%"> <%= t('.buildings') %> </td>
      <th class="govuk-table__header govuk-!-font-weight-bold" scope="col" style="width: 40%"> <%= t('.services') %> </td>
    </tr>
  </thead>
  <tbody class="govuk-table__body">
    <% @procurement.active_procurement_buildings.order_by_building_name.each do |procurement_building| %>
      <tr class="govuk-table__row">
        <td class="govuk-table__cell govuk-!-padding-right-2" valign="top">
          <span class="ccs-font-weight-semi-bold">
            <%= procurement_building.name %>
          </span>
          <br/>
          <%= procurement_building.full_address %>
        </td>
        <td class="govuk-table__cell govuk-!-padding-right-2" valign="top">
          <%= govuk_details("#{pluralize(procurement_building.service_codes.count, 'service')} selected", true) do %>
          <ul class="govuk-!-padding-left-3 govuk-!-margin-top-2">
            <% procurement_building.service_codes.each_with_index do |service_code, index| %>
              <li class="<%= 'govuk-!-padding-top-2' unless index == 0%>">
                <%= "#{service_name(service_code)}" %>
              </li>
            <% end %>
          </ul>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>