<a href="/facilities-management/select-services" class="govuk-back-link">Back</a>

<%= render('errors/inline_error_summary') %>

<div>
  <fieldset class="govuk-fieldset" aria-describedby="">
    <h2 class="govuk-heading-m">
      Where are your buildings located?
    </h2>
  </fieldset>
  <p class="govuk-caption-m">
    Select the regions, based on building's location where you require facilities <br>management services.
  </p>
</div>
<div class="govuk-grid-column-two-thirds">
  <div class="govuk-accordion" data-module="accordion" id="region-accordion">
    <% @regions.each do |key, value| %>
      <div class="govuk-accordion__section ">
        <div class="govuk-accordion__section-header">
          <h2 class="govuk-accordion__section-heading">
            <span class="govuk-accordion__section-button" id="region-<%= key %>"><%= value %></span>
          </h2>
        </div>
        <div id="
          <% key %>-content" class="govuk-accordion__section-content CCS-fm-region-filter-check-box-label" aria-labelledby="<%= value %>">

          <% @subregions.each do |key2, value2| %>

            <% if key2.start_with?(key) %>
              <div class="govuk-form-group">
                <fieldset class="govuk-fieldset" aria-describedby="<%= value2 %>">
                  <div id="location-checkboxes" class="govuk-checkboxes">
                    <div class="govuk-checkboxes__item">
                      <input class="govuk-checkboxes__input" id="<%= key2 %>" name="<%= key2 %>" locationid="<%= value2 %>" type="checkbox" value="<%= key2 %>">
                      <label id="<%= key2 %>_label" class="govuk-label govuk-checkboxes__label CCS-fm-region-filter-check-box-label" for="<%= key2 %>">
                        <%= value2 %>
                      </label>
                    </div>
                  </div>
                </fieldset>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="govuk-accordion__section ">
      <div class="govuk-accordion__section-header">
        <h2 class="govuk-accordion__section-heading">
          <span class="govuk-accordion__section-button" id="region-OS01">International</span>
        </h2>
      </div>
      <div id="OS01-content" class="govuk-accordion__section-content" aria-labelledby="International coverage">
        <div class="govuk-form-group">
          <fieldset class="govuk-fieldset" aria-describedby="International coverage">
            <div class="govuk-checkboxes">
              <div class="govuk-checkboxes__item">
                <input class="govuk-checkboxes__input" id="OS01" name="OS01" type="checkbox" locationid="International coverage" value="International coverage">
                <label id="OS01_label" name="OS01_label" class="govuk-accordion__section-heading govuk-checkboxes__label" for="OS01">
                  International coverage
                </label>
              </div>
            </div>
          </fieldset>
        </div>
      </div>
    </div>
  </div>
  <form id="fm-services-form" name="fm-services-form" action="/facilities-management/suppliers/longList" method="post">
    <input name="authenticity_token" type="hidden" value='<%= csrf_meta_tag %>' />
    <input id="postedlocations" name="postedlocations" type="hidden" value="" />
    <input id="postedservices" name="postedservices" type="hidden" value="" />
    <%= hidden_field_tag 'current_choices', TransientSessionInfo[session.id].to_json %>
    <a role='button' class='govuk-button govuk-button--start govuk-!-margin-top-2 govuk-!-margin-bottom-8' id='save-locations-link'><%= t('common.continue') %></a>
  </form>
</div>
<div class="govuk-grid-column-one-third">
  <div class="filter-selection">
    <header>
      <div class="filter-selection__header">
        <a id="remove-all-locations-link" name="remove-all-link" class="remove-all js-filter" href=""><%= t('facilities_management.basket.removeall_text') %></a>
        <h2 class="govuk-heading-s font-weight-700">
          <span id="selected-location-count" class="font-size--18"><%= t('facilities_management.basket.none') %></span> selected
        </h2>
      </div>
    </header>
    <ul id="selected-fm-locations" class="govuk-!-padding-0 font-size--10"></ul>
  </div>
</div>
