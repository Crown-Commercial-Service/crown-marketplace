<%= content_for :page_title, t('.heading_title') %>
<%= admin_breadcrumbs(
  { text: t('.breadcrumb_text_generate_management_report'), link: new_facilities_management_rm3830_admin_management_report_path },
  { text: t('.breadcrumb_text_management_report') }
) %>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl"><%= t('.heading_title') %></h1>
    <h2 class="govuk-heading-l"><%= t('.heading_sub') %></h2>
    <h3 class="govuk-body-l"><%= t('.heading_sub_detail', start_date: @management_report.start_date.strftime('%d/%-m/%Y'), end_date: @management_report.end_date.strftime('%d/%-m/%Y')) %></h3>
    <div id="management-report-status" class="management-report-state-<%=@management_report.aasm_state%>">
      <%= render partial: @management_report.aasm_state %>
    </div>

    <%= link_to t('.download_btn_text'), new_facilities_management_rm3830_admin_management_report_path, class: 'govuk-button', aria: { label: t('.download_btn_text') } %>
    <br/>
    <%= link_to t('.return_link'), facilities_management_rm3830_admin_path, class: 'govuk-link govuk-!-font-size-19', aria: { label: t('.return_link') } %>
  </div>
</div>
