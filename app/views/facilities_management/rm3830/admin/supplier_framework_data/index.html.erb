<%= content_for :page_title, t('.heading') %>
<%= admin_breadcrumbs({ text: t('.heading') })%>

<h1 class="govuk-heading-xl">
  <%= t('.heading') %>
</h1>

<p class="govuk-body govuk-!-width-two-thirds">
  <%= t('.manage_supplier_framework_data_html', link: link_to(t('.manage_supplier_framework_data'), facilities_management_rm3830_admin_uploads_path, class: 'govuk-link govuk-link govuk-link--no-visited-state')) %>
</p>

<div class="govuk-!-width-two-thirds">
  <%= govuk_accordion('supplier-framework-data', @fm_suppliers) do |data| %>
    <% supplier_id = data[:supplier_id] %>

    <% %w[1a 1b 1c].each do |lot_number| %>
      <% if (@supplier_present[lot_number][supplier_id]) %>
        <div class="govuk-!-margin-bottom-5">
          <span class="govuk-body govuk-!-font-size-19 govuk-!-margin-bottom-5 govuk-!-font-weight-bold">
            <%= t(".sub_lot.#{lot_number}") %>
          </span>
          <br />
          <%= link_to lot_number == '1a' ? t('.service_prices') : t('.services'), facilities_management_rm3830_admin_supplier_framework_datum_sublot_service_path(supplier_id, lot_number), class: 'govuk-link govuk-!-font-size-19 govuk-!-margin-right-3' %>
          <%= link_to t('.regions'), facilities_management_rm3830_admin_supplier_framework_datum_sublot_region_path(supplier_id, lot_number), class: 'govuk-link govuk-!-font-size-19' %>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>

<%= link_to t('.return_link'), facilities_management_rm3830_admin_path, class: 'govuk-button govuk-button--secondary govuk-!-margin-top-5' %>
