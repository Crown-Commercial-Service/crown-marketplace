<table class="govuk-table" id="further-competition-table">
  <% unless @further_competition_contracts.empty? %>
    <thead class="govuk-table__head">
      <tr class="govuk-table__row">
        <th class="govuk-table__header govuk-!-font-weight-bold" scope="col" width="25%"><%= t('.name') %></th>
        <th class="govuk-table__header govuk-!-font-weight-bold" scope="col" width="25%"><%= t('.date_saved') %></th>
        <td class="govuk-table__header govuk-!-font-weight-bold" width="55%"></td>
      </tr>
    </thead>
    <tbody class="govuk-table__body">
      <% @further_competition_contracts.each do |fc_contracts| %>
        <tr class="govuk-table__row">
          <th class="govuk-table__header govuk-!-padding-right-2" scope="row">
            <%= link_to fc_contracts.contract_name, facilities_management_rm3830_procurement_path(fc_contracts) %>
          </th>
          <td class="govuk-table__cell govuk-!-padding-right-2"><%= further_competition_saved_date(fc_contracts) %></td>
          <td class="govuk-table__header govuk-!-font-weight-bold"></td>
          <td class="govuk-table__header govuk-!-font-weight-bold"></td>
        </tr>
      <% end %>
  </tbody>
  <% else %>
    <hr class="govuk-section-break govuk-section-break--visible govuk-!-margin-bottom-3">
      <span class="govuk-body"> <%= t('.no_fc') %></span>
    <hr class="govuk-section-break govuk-section-break--visible govuk-!-margin-top-3">
  <% end %>
</table>
