<%= content_for :page_title, t('.page_title') %>

<h1 class="govuk-heading-m">
  <%= t('.are_you_sure', contract_name: @procurement.contract_name)%>
</h1>

<p>
  <%= t('.cannot_be_un_done') %>
</p>

<%= form_for @procurement, url: facilities_management_rm3830_procurement_path(@procurement), method: :delete, html: { specialvalidation: true, novalidate: true, multipart: true } do |f| %>
  <%= f.submit t('.confirm_delete'), class: "govuk-button govuk-button--warning", aria: { label: t('.confirm_delete') } %>
  <%= link_to t('.cancel'),  facilities_management_rm3830_procurements_path, class: "govuk-button govuk-button--secondary govuk-!-margin-left-3", aria: { label: t('.cancel_delete') } %>
<% end %>
