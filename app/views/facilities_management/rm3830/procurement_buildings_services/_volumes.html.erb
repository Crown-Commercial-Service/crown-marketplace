<% attribute =  volume_question(f.object) %>
<%= form_group_with_error(f.object, attribute) do |displayed_error| %>
  <%= f.label attribute, t(".question.#{attribute}"), class: 'govuk-heading-m' %>
  <% if per_annum_volume?(attribute) %>
    <div class="govuk-hint">
      <%= t(".volume_example.#{attribute}")%>
    </div>
  <% end %>
  <%= displayed_error %>
  <div class="govuk-input__wrapper">
    <%= f.text_field attribute, class: "govuk-input ccs-number-field ccs-integer-field govuk-input--width-10 #{'govuk-input--error' if f.object.errors[attribute].any?}", min: 1, maxlength: 11 %>
    <div class="govuk-input__suffix" aria-hidden="true"><%= t(".unit.#{attribute}") %></div>
  </div>
<% end %>
