<div class="govuk-body govuk-grid-row procurement-building-service">
  <%= form_for @procurement_building, url: facilities_management_beta_procurement_building_path(@procurement_building), method: :put, html: { multipart: true } do |f| %>
    <div class="govuk-grid-column-full">
      <%= render('facilities_management/beta/procurements/shared/backlink_header') %>
      <%= render partial: 'shared/error_summary', locals: { errors: f.object.errors } %>
    </div>
    <div class="govuk-grid-column-three-quarters">
      <span class="govuk-caption-m"><%= @procurement_building.procurement.name %> - <%= @procurement_building.name %></span>
      <h1 class="govuk-heading-xl"><%= t('.heading') %></h1>
      <h2 class="govuk-heading-m govuk-!-margin-bottom-0"><%= t('.subheading') %></h2>
      <p class="govuk-caption-m govuk-!-margin-bottom-6"><%= t('.caption') %></p>
      <div class="govuk-summary-list ">
        <% index = 0 %>
        <%= f.fields_for :procurement_building_services do |procurement_building_service| %>
          <% if procurement_building_service.object.requires_volume? %>
            <% index += 1 %>
            <div class="govuk-grid-row procurement-building-service__form-group govuk-!-margin-0 govuk-!-padding-top-2 govuk-!-padding-bottom-2 govuk-form-group <%= "govuk-form-group--error" if procurement_building_service.object.errors.any? %> <%= 'border-top' if index == 1 %>" id="<%= error_id("procurement_building_services.#{volume_question(procurement_building_service.object.code)}") %>">
              <div class="govuk-grid-column-one-half govuk-!-padding-0">
                <strong><%= index %>. <%= procurement_building_service.object.name %></strong>
              </div>
              <div class="govuk-grid-column-one-half govuk-!-padding-0">
                <div class="govuk-grid-row">
                  <div class="govuk-grid-column-three-quarters">
                    <%= procurement_building_service.label t(".question.#{volume_question(procurement_building_service.object.code).to_s}"), class: "govuk-label govuk-!-font-weight-bold govuk-!-font-size-16" %>
                  </div>
                  <div class="govuk-grid-column-one-quarter">
                    <%= procurement_building_service.text_field volume_question(procurement_building_service.object.code), value: procurement_building_service.object.send(volume_question(procurement_building_service.object.code)), class: "govuk-input govuk-input--width-3 #{'govuk-input--error' if procurement_building_service.object.errors.any?} " %>
                  </div>
                </div>
              </div>
              <%= display_error_no_attr(procurement_building_service.object, volume_question(procurement_building_service.object.code)) %>
            </div>
          <% end %>
        <% end %>
        <div class="govuk-grid-row govuk-!-margin-top-9">
          <%= f.submit t('.save_and_return_to_service_information'), class: 'govuk-button govuk-button--primary govuk-!-margin-left-3 govuk-!-margin-bottom-4' %>
        </div>
        <%= link_to t('.back_to_service_information'), facilities_management_beta_procurement_building_path(@procurement_building), class: 'govuk-link--no-visited-state' %>
      </div>
    </div>
  <% end %>
</div>