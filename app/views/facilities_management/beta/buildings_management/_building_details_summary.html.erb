<h2><%= t('facilities_management.beta.building-details-summary.section-header') %></h2>
<div id="fm-buildings-container">
  <form id="change_submission_form" action="" method="post">
    <input type="hidden" value="" name="id" id="target-building"/>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
  <div class="govuk-table" data-module="table" id="buildings-list">
    <table class="govuk-!-width-three-quarters" style="border-collapse: collapse;">
      <tr>
        <th></th>
        <td></td>
        <td></td>
      </tr>
      <tbody>
      <tr>
        <th><%= t('facilities_management.beta.building-details-summary.caption_name') %></th>
        <td>
          <% if !@building['name'].blank? %>
            <%= @building['name'] %>
          <% else %>
            <%= link_to t('facilities_management.beta.building-details-summary.add_name_text'), "#{@base_path}building", { 'building-id': @building_id, role:'change', class: 'govuk-link' }%>
          <% end %>
        </td>
        <td>
          <% if !@building['name'].blank? %>
            <%= link_to t('facilities_management.beta.building-details-summary.change_text'), "#{@base_path}building", { 'building-id': @building_id, role:'change', class: 'govuk-link' }%>
          <% end %>
        </td>
      </tr>
      <tr>
        <th><%= t('facilities_management.beta.building-details-summary.caption_desc') %></th>
        <td>
          <% if !@building['description'].blank? %>
            <%= @building['description'] %>
          <% else %>
            <%= link_to t('facilities_management.beta.building-details-summary.add_desc_text'), "#{@base_path}building", { 'building-id': @building_id, role:'change', class: 'govuk-link' }%>
          <% end %>
        </td>
        <td>
          <% if !@building['description'].blank? %>
            <%= link_to t('facilities_management.beta.building-details-summary.change_text'), "#{@base_path}building", { 'building-id': @building_id, role:'change', class: 'govuk-link' }%>
          <% end %>
        </td>
      </tr>
      <tr>
        <th><%= t('facilities_management.beta.building-details-summary.caption_addr') %></th>
        <td>
          <% if !@building['address'].blank? %>
            <% address = @building['address']['fm-address-line-1'].to_s + (@building['address']['fm-address-line-1'].to_s.length > 0 ? ', ' : ' ') + @building['address']['fm-address-line-2'].to_s + (@building['address']['fm-address-line-2'].to_s.length > 0 ? ', ' : ' ') + @building['address']['fm-address-town'].to_s + (@building['address']['fm-address-town'].to_s.length > 0 ? ', ' : ' ') + @building['address']['fm-address-county'].to_s + (@building['address']['fm-address-county'].to_s.length > 0 ? ', ' : ' ') + @building['address']['fm-address-postcode'].to_s %>
            <%= address %>
          <% else %>
            <%= link_to t('facilities_management.beta.building-details-summary.add_address_text'), "#{@base_path}building", { 'building-id': @building_id, role:'change', class: 'govuk-link' }%>
          <% end %>
        </td>
        <td>
          <% if !@building['address'].blank? %>
            <%= link_to t('facilities_management.beta.building-details-summary.change_text'), "#{@base_path}building", { 'building-id': @building_id, role:'change', class: 'govuk-link' }%>
          <% end %></td>
      </tr>

      <tr>
        <th><%= t('facilities_management.beta.building-details-summary.caption_region_nuts') %></th>
        <td>
          <% if !@building['address'].blank? %>
            <%= @building['address']['fm-address-region'].to_s %>
          <% end %>
        </td>
        <td>
        </td>
      </tr>







      <tr>
        <th><%= t('facilities_management.beta.building-details-summary.caption_gia') %></th>
        <td>
          <% if !@building['gia'].blank? %><%=number_with_delimiter(@building['gia'], :delimiter => ',') + " sqm"  %>
          <% else %>
            <%= link_to t('facilities_management.beta.building-details-summary.answer_question_text'), "#{@base_path}building-gross-internal-area", { 'building-id': @building_id, role:'change', class: 'govuk-link' }%>
          <% end %></td>
        <td>
          <% if !@building['gia'].blank? %>
            <%= link_to t('facilities_management.beta.building-details-summary.change_text'), "#{@base_path}building-gross-internal-area", { 'building-id': @building_id, role:'change', class: 'govuk-link' }%>
          <% end %></td>
      </tr>
      <tr>
        <th><%= t('facilities_management.beta.building-details-summary.caption_type') %></th>
        <td>
          <% if !@building['building-type'].blank? %><%= @building['building-type'] %>
          <% else %>
            <%= link_to t('facilities_management.beta.building-details-summary.select_one_option_text'), "#{@base_path}building-type", { 'building-id': @building_id, role:'change', class: 'govuk-link' }%>
          <% end %></td>
        <td>
          <% if !@building['building-type'].blank? %>
            <%= link_to t('facilities_management.beta.building-details-summary.change_text'), "#{@base_path}building-type", {'building-id': @building_id, role:'change',  class: 'govuk-link' }%>
          <% end %></td>
      </tr>
      <tr>
        <th><%= t('facilities_management.beta.building-details-summary.caption_sec') %></th>
        <td>
          <% if !@building['security-type'].blank? %>
            <%= @building['security-type'].capitalize %>
          <% else %>
            <%= link_to t('facilities_management.beta.building-details-summary.select_one_option_text'), "#{@base_path}building-security-type", { 'building-id': @building_id, role:'change', class: 'govuk-link' }%>
          <% end %>
        </td>
        <td>
          <% if !@building['security-type'].blank? %>
            <%= link_to t('facilities_management.beta.building-details-summary.change_text'), "#{@base_path}building-security-type", { 'building-id': @building_id, role:'change', class: 'govuk-link' }%>
          <% end %></td>
      </tr>
      </tbody>
    </table>
  </div>
</div>
