<div class="govuk-body">
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-l">Buyer account</span>
      <h1 class="govuk-heading-xl"><%= @current_login_email %></h1>
      <span class="govuk-heading-m govuk-!-margin-0">Procurements</span>
    </div>
  </div>
  <hr class="govuk-!-margin-bottom-5">
  <div class="govuk-grid-row govuk-!-margin-bottom-6">
    <div class="govuk-grid-column-one-third">
      <div class="fm-buyer-account-panel">
        <%= link_to 'Start a new procurement', '/facilities-management/choose-services', class: 'fm-buyer-account-panel__title' %>
        <p class="fm-buyer-account-panel__body">
          Quick search for suppliers or create a new procurement
        </p>
      </div>
    </div>
    <div class="govuk-grid-column-one-third">
      <div class="fm-buyer-account-panel">
        <%= link_to(t('.facilities_management.beta.index.manage_procurements_link'), facilities_management_beta_procurements_path, class: 'fm-buyer-account-panel__title') %>

        <p class="fm-buyer-account-panel__body">
          See a list of your search results and procurements
        </p>
      </div>
    </div>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-heading-m govuk-!-margin-top-5 govuk-!-margin-bottom-1">Buildings</span>
    </div>
  </div>
  <hr class="govuk-!-margin-bottom-5">
  <div class="govuk-grid-row govuk-!-margin-bottom-6">
    <div class="govuk-grid-column-one-third">
      <div class="fm-buyer-account-panel">
        <%= link_to t(".manage_buildings"), facilities_management_beta_buildings_path, class: "fm-buyer-account-panel__title"%>
        <p class="fm-buyer-account-panel__body">
          Create and manage your buildings used in your procurements
        </p>
      </div>
    </div>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-heading-m govuk-!-margin-top-5 govuk-!-margin-bottom-1"><%= t('.about_the_buyer_title') %></span>
    </div>
  </div>
  <hr class="govuk-!-margin-bottom-5">
  <div class="govuk-grid-row govuk-!-margin-bottom-6">
    <div class="govuk-grid-column-one-third">
      <div class="fm-buyer-account-panel">
        <%= link_to t('.link_text'), edit_facilities_management_beta_buyer_detail_path(@buyer_detail), class: 'fm-buyer-account-panel__title' %>
        <p class="fm-buyer-account-panel__body"><%= t('.about_the_buyer_description') %></p>
      </div>
    </div>
  </div>
</div>
