<%= govuk_page_content(@page_description, @page_data[:model_object]) do |pd| %>
    <!-- This needs to be made correct for the final page -->
    <%= form_for @page_data[:model_object], url: facilities_management_beta_procurements_path do |f| %>
        <%= render partial: 'contract_summary_head' %>
    
        <%= render partial: '/facilities_management/beta/procurement_direct_award_contract/contract_summary/contract_offer_dates' %>
    
        <%= render partial: '/facilities_management/beta/procurement_direct_award_contract/contract_summary/procurement_requirements' %>
        <%= render partial: '/facilities_management/beta/procurement_direct_award_contract/contract_summary/supplier_contact_details' if @page_data[:procurement_data][:aasm_state] == :awaiting_contract_signature %>
        <%= render partial: '/facilities_management/beta/procurement_direct_award_contract/contract_summary/call_off_contract_documents' %>
        
        <%= render partial: '/facilities_management/beta/procurement_direct_award_contract/contract_summary/when_awaiting_response' if @page_data[:procurement_data][:aasm_state] == :awaiting_supplier_response %>
        <%= render partial: '/facilities_management/beta/procurement_direct_award_contract/contract_summary/whn_awaiting_signature' if @page_data[:procurement_data][:aasm_state] == :awaiting_contract_signature %>
        
        <%= render partial: 'contract_summary_foot' %>
        <% unless @page_data[:procurement_data][:closed] %>
            <% case @page_data[:procurement_data][:aasm_state] %>
            <% when :awaiting_supplier_response %>
                <%= govuk_continuation_buttons(pd, f, true, true, false, true) %>
            <% when :accepted_and_signed %>
                <%= govuk_continuation_buttons(pd, f, true, true, false) %>
            <% else %>
                <%= govuk_continuation_buttons(pd, f, true, true, true, true) %>
            <% end %>
        <% else %>
            <%= govuk_continuation_buttons(pd, f, true, true, false) %>
        <% end %>
    <% end %>
<% end %>
