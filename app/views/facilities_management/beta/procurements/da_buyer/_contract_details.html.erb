<%= govuk_page_content(@page_description, @page_data[:model_object]) do |pd|%>
    <p class="govuk-body govuk-!-width-three-quarters govuk-!-font-size-24"><%= t('.contract_details_description') %></p>
    <div class="govuk-!-width-full govuk-!-font-size-19">
        <dl class="govuk-summary-list govuk-body govuk-!-width-three-quarters">
        <table class="govuk-table">
            <tbody class="govuk-table__body">
                <tr class="govuk-table__row">
                    <th class="govuk-table__cell" scope="row"></th>
                    <td class="govuk-table__cell"></td>
                    <td class="govuk-table__cell"></td>
                </tr>
                <tr class="govuk-table__row">
                    <th scope="row" class="ccs-font-weight-semi-bold govuk-table__header" width="55%"><%= t('.payment_method') %></th>
                    <td class="govuk-link govuk-table__cell govuk-link--no-visited-state">
                      <%= link_to 'Answer question', edit_facilities_management_beta_procurement_path(id: @page_data[:model_object].id, step: 'payment_method') if @page_data[:model_object][:payment_method].blank? %>
                      <%= t('facilities_management.beta.procurements.edit.payment_method.bacs_payment') if @page_data[:model_object][:payment_method] == 'bacs' and @page_data[:model_object][:payment_method].present? %>
                      <%= t('facilities_management.beta.procurements.edit.payment_method.government_procurement_card') if @page_data[:model_object][:payment_method] == 'card' and @page_data[:model_object][:payment_method].present? %>
                    </td>
                    <td class="govuk-table__cell">
                      <%= link_to 'Change', edit_facilities_management_beta_procurement_path(id: @page_data[:model_object].id, step: 'payment_method') if @page_data[:model_object][:payment_method].present? %>
                    </td>
                </tr>
                <tr class="govuk-table__row">
                    <th scope="row" class="ccs-font-weight-semi-bold govuk-table__header" width="55%"><%= t('.invoicing_contact_details') %></th>
                    <td class="govuk-link govuk-table__cell govuk-link--no-visited-state">
                      <%= link_to 'Answer question', edit_facilities_management_beta_procurement_path(id: @page_data[:model_object].id, step: 'invoicing_contact_details') if @page_data[:model_object][:using_buyer_detail_for_invoice_details].nil?%>
                      <%= @page_data[:model_object][:using_buyer_detail_for_invoice_details] unless @page_data[:model_object][:using_buyer_detail_for_invoice_details].nil?%>
                    </td>
                    <td class="govuk-table__cell">
                      <%= link_to 'Change', edit_facilities_management_beta_procurement_path(id: @page_data[:model_object].id, step: 'invoicing_contact_details') unless @page_data[:model_object][:using_buyer_detail_for_invoice_details].nil?%>
                    </td>
                </tr>
                <tr class="govuk-table__row">
                    <th scope="row" class="ccs-font-weight-semi-bold govuk-table__header" width="55%"><%= t('.authorised_representative') %></th>
                    <td class="govuk-link govuk-table__cell govuk-link--no-visited-state">
                      <%= link_to 'Answer question', edit_facilities_management_beta_procurement_path(id: @page_data[:model_object].id, step: 'authorised_representative') if @page_data[:model_object][:using_buyer_detail_for_authorised_detail].nil? %>
                      <%= @page_data[:model_object][:using_buyer_detail_for_authorised_detail] unless @page_data[:model_object][:using_buyer_detail_for_authorised_detail].nil?%>
                    </td>
                    <td class="govuk-table__cell">
                      <%= link_to 'Change', edit_facilities_management_beta_procurement_path(id: @page_data[:model_object].id, step: 'authorised_representative') unless @page_data[:model_object][:using_buyer_detail_for_authorised_detail].nil? %>
                    </td>
                </tr>
                <tr class="govuk-table__row">
                    <th scope="row" class="ccs-font-weight-semi-bold govuk-table__header" width="55%"><%= t('.notices_contact_details') %></th>
                    <td class="govuk-link govuk-table__cell govuk-link--no-visited-state">
                      <%= link_to 'Answer question', edit_facilities_management_beta_procurement_path(id: @page_data[:model_object].id, step: 'notices_contact_details') if @page_data[:model_object][:using_buyer_detail_for_notices_detail].nil? %>
                      <%= @page_data[:model_object][:using_buyer_detail_for_notices_detail] unless @page_data[:model_object][:using_buyer_detail_for_notices_detail].nil?%>
                    </td>
                    <td class="govuk-table__cell">
                      <%= link_to 'Change', edit_facilities_management_beta_procurement_path(id: @page_data[:model_object].id, step: 'notices_contact_details') unless @page_data[:model_object][:using_buyer_detail_for_notices_detail].nil? %>
                    </td>
                </tr>
                <tr class="govuk-table__row">
                    <th scope="row" class="ccs-font-weight-semi-bold govuk-table__header" width="55%"><%= t('.security_policy_document') %></th>
                    <td class="govuk-link govuk-table__cell govuk-link--no-visited-state">
                      <%= link_to 'Answer question', edit_facilities_management_beta_procurement_path(id: @page_data[:model_object].id, step: 'security_policy_document') if @page_data[:model_object][:security_policy_document_required].blank? %>
                      <%= @page_data[:model_object][:security_policy_document_name] if @page_data[:model_object][:security_policy_document_required] == true and @page_data[:model_object][:security_policy_document_required].present?%>
                      <%= 'Not Applicable' if @page_data[:model_object][:security_policy_document_required] == false and @page_data[:model_object][:security_policy_document_required].present?%>
                    </td>
                    <td class="govuk-table__cell">
                      <%= link_to 'Change', edit_facilities_management_beta_procurement_path(id: @page_data[:model_object].id, step: 'security_policy_document') if @page_data[:model_object][:security_policy_document_required].present?%>
                    </td>
                </tr>
                <tr class="govuk-table__row">
                    <th scope="row" class="ccs-font-weight-semi-bold govuk-table__header" width="55%"><%= t('.local_government_pension_scheme') %></th>
                    <td class="govuk-link govuk-table__cell govuk-link--no-visited-state">
                      <%= link_to 'Answer question', edit_facilities_management_beta_procurement_path(id: @page_data[:model_object].id, step: 'local_government_pension_scheme') if @page_data[:model_object][:local_government_pension_scheme].blank? %>
                      <%= @page_data[:model_object][:local_government_pension_scheme] if @page_data[:model_object][:local_government_pension_scheme].present?%>
                    </td>
                    <td class="govuk-table__cell">
                      <%= link_to 'Change', edit_facilities_management_beta_procurement_path(id: @page_data[:model_object].id, step: 'local_government_pension_scheme') if @page_data[:model_object][:local_government_pension_scheme].present? %>
                    </td>
                </tr>
            </tbody>
        </table>
        </dl>
    </div>
  <%= form_for @page_data[:model_object], url: facilities_management_beta_procurement_path(@procurement.id), method: :put, html: { specialvalidation: false, novalidate: true, multipart: true } do |f| %>
        <%= govuk_continuation_buttons(pd, f) %>
    <%end %>
<%end %>

