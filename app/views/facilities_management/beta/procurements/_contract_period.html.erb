<div class="govuk-summary-list__row">
  <dt class="govuk-summary-list__key govuk-!-font-size-24">
    Contract period
  </dt>

  <dd class="govuk-summary-list__value">
    <%= link_to "Answer all questions", edit_facilities_management_beta_procurement_path(:step => 'contract_dates'), :class => "govuk-link" %>
  </dd>
  <dd class="govuk-summary-list__actions">
  </dd>
</div>

<div class="govuk-summary-list__row">
  <dt class="govuk-summary-list__key">
    Initial call-off period
  </dt>
  <dd class="govuk-summary-list__value">

    <%= @procurement.initial_call_off_period %>
    <% unless @procurement.initial_call_off_period.nil? %> <%= @procurement.initial_call_off_period > 1 ? ' years' : 'year' %>
    <% end %>
  </dd>
  <dd class="govuk-summary-list__actions">
  </dd>
</div>

<div class="govuk-summary-list__row">
  <dt class="govuk-summary-list__key">
    Initial call-off period start date
  </dt>
  <dd class="govuk-summary-list__value">
    <%= @procurement.initial_call_off_start_date %>
  </dd>
  <dd class="govuk-summary-list__actions">
  </dd>
</div>

<div class="govuk-summary-list__row">
  <dt class="govuk-summary-list__key">
    Initial call-off period end date
  </dt>
  <dd class="govuk-summary-list__value">
    <% unless @procurement.initial_call_off_period.nil? %>
      <%= Date.parse(@procurement.initial_call_off_start_date.to_s).next_year(@procurement.initial_call_off_period) -1 %>
    <% end %>
  </dd>
  <dd class="govuk-summary-list__actions">
  </dd>
</div>

<div class="govuk-summary-list__row">
  <dt class="govuk-summary-list__key">
    Mobilisation period
  </dt>
  <dd class="govuk-summary-list__value">
    <%= @procurement.mobilisation_period %>
    <% unless @procurement.mobilisation_period.nil? %> <%= @procurement.mobilisation_period > 1 ? ' weeks' : 'week' %>
    <% end %>
  </dd>
  <dd class="govuk-summary-list__actions">
  </dd>
</div>

<% unless @procurement.optional_call_off_extensions_1.nil? %>
  <div class="govuk-summary-list__row ">
    <dt class="govuk-summary-list__key">
      Optional call-off extension 1
    </dt>
    <dd class="govuk-summary-list__value">
      <%= @procurement.optional_call_off_extensions_1 %> <%= @procurement.optional_call_off_extensions_1 > 1 ? ' years' : 'year' %>
    </dd>
    <dd class="govuk-summary-list__actions">
    </dd>
  </div>
<% end %>

<% unless @procurement.optional_call_off_extensions_2.nil? %>
  <div class="govuk-summary-list__row">
