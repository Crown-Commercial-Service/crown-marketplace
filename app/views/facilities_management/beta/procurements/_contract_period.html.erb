  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      Optional call-off extension 3
    </dt>
    <dd class="govuk-summary-list__value">
      <%= @procurement.optional_call_off_extensions_3 %> <%= @procurement.optional_call_off_extensions_3 > 1 ? ' years' : 'year' %>
    </dd>
    <dd class="govuk-summary-list__actions">
    </dd>
  </div>
<% end %>
