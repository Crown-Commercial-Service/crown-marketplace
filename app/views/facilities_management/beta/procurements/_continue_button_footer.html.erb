<div class="govuk-!-margin-top-6">
  <% if @delete %>
    <%= link_to 'Confirm delete', facilities_management_beta_procurement_path(@procurement), method: 'delete', class: "govuk-button govuk-button--warning", 'aria-labelledby': 'Confirm delete' %>
    <%= link_to 'Cancel',  facilities_management_beta_procurements_url, class: "govuk-button govuk-button--secondary govuk-!-margin-left-3", 'aria-labelledby': 'Cancel' %>
  <% else %>
    <%= f.submit 'Continue', class: 'govuk-button', data: { disable_with: false }, 'aria-labelledby': 'continue_to_results'%>
    <%= link_to 'Return to procurements dashboard', facilities_management_beta_procurements_path, class: 'govuk-button govuk-button--secondary govuk-!-margin-left-3', 'aria-labelledby': 'Return to procurements dashboard' %>
  <%end %>
</div>

