<div class="govuk-caption-xl">
    <%= @procurement.name %>
</div><div class="govuk-heading-xl">
    <%= t('.title') %>
</div>
<div class="govuk-heading-l">
    <%= t('.description') %>
</div>
<div class="govuk-radios">
    <div class="govuk-radios__item">
        <%= f.radio_button :contract_signed, true, class: 'govuk-radios__input', id: 'contract-signed-yes', name: 'contract-signed-status' %>
        <%= f.label :contract_signed, value: true, class: 'govuk-label govuk-radios__label' do %>
          <%= t('.yes') %>
        <% end %>
    </div>
    <div id="contract-signed-yes-container" class="govuk-details__text govuk-!-padding-top-0 govuk-!-margin-left-3 govuk-!-margin-bottom-2 govuk-!-width-two-thirds  <%= 'govuk-visually-hidden' unless @page_data[:yes_is_used]%>">
        <div class="govuk-body ccs-font-weight-semi-bold">
            <%= t('.contract_start_date') %>
        </div>
        <div class="govuk-hint">
            <%= t('.contract_start_date_caption') %>
        </div>
        <%= f.gov_uk_date_field :contract_signed_date, legend_options: { page_heading: false, visually_hidden: true } %>
        
        <div class="govuk-body ccs-font-weight-semi-bold">
            <%= t('.contract_end_date') %> <br />
        </div>
        <div class="govuk-hint">
            <%= t('.contract_end_date_caption') %>
        </div>
        <%= f.gov_uk_date_field :contract_end_date, legend_options: { page_heading: false, visually_hidden: true } %>
    </div>

    <div class="govuk-radios__item">
        <%= f.radio_button :contract_signed, false, class: 'govuk-radios__input', id: 'contract-signed-no', name: 'contract-signed-status' %>
        <%= f.label :contract_signed, value: false, class: 'govuk-label govuk-radios__label' do %>
          <%= t('.no') %>
        <% end %>
    </div>
    <div id="contract-signed-no-container" class="govuk-details__text govuk-!-padding-top-0 govuk-!-margin-left-3 govuk-!-width-two-thirds  <%= 'govuk-visually-hidden' unless @page_data[:no_is_used]%>" data-module="character-count" data-maxlength="100">
        <%#= govuk_label(f, f.object, :reason_for_closing, {reason_for_closing: t('.reason_for_closing')}) %>
        <%= display_error_label(f.object, :reason_for_closing, '', "#{f.object_name}_reason_for_closing") %>
        <%= govuk_text_area_input(f, :reason_for_closing, true, ['rows', 5], ['maxlength', 100], [:class, 'govuk-!-margin-bottom-2 govuk-!-margin-top-4']) %>
        <span id="facilities_management_procurement_supplier_character_left" class="govuk-hint govuk-character-count__message" aria-live="polite">
            You have 100 characters remaining
        </span>
    </div>
</div>