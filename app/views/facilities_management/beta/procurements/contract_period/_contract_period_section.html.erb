<tr class="govuk-table__row">
  <th scope="row" class="govuk-table__header govuk-!-font-size-19 <%= 'govuk-!-padding-left-2' if @procurement.unanswered_contract_date_questions? %>">Initial call-off period</th>
  <td class="govuk-table__cell">
    <%= initial_call_off_period @procurement.initial_call_off_period %>
  </td>
  <td class="govuk-table__cell">
  </td>
</tr>
<tr class="govuk-table__row">
  <td colspan="3" class="govuk-!-padding-top-2 govuk-no-border govuk-!-padding-bottom-2 govuk-table__cell">
    <table style="border-collapse: collapse; width:100%">
      <tr class="govuk-table__row <%= 'govuk-no-border govuk-form-group--error' if @procurement.errors[:initial_call_off_start_date].any? %>">
        <th style="width:30%" class="govuk-table__header govuk-!-font-size-19 <%= 'govuk-!-padding-left-2' if @procurement.unanswered_contract_date_questions? || @procurement.errors[:initial_call_off_start_date].any?%>">Initial call-off period start date</th>
        <td style="width:45%" class="govuk-table__cell">
          <%= initial_call_off_period_start_date %>
        </td>
        <td class="govuk-table__cell">
        </td>
      </tr>
      <% if @procurement.errors[:initial_call_off_start_date].any? %>
        <tr class="govuk-table__row govuk-!-margin-0 govuk-!-padding-0 govuk-no-border govuk-form-group--error">
          <td class="govuk-table__cell govuk-!-margin-0 govuk-!-padding-0 govuk-!-padding-left-2 " colspan="3"><%= display_error(@procurement, :initial_call_off_start_date, false) %></td>
        </tr>
      <% end %>
    </table>
  </td>
</tr>
<tr class="govuk-table__row">
  <th scope="row" class="govuk-table__header govuk-!-font-size-19 <%= 'govuk-!-padding-left-2' if @procurement.unanswered_contract_date_questions? %>">Initial call-off period end date</th>
  <td class="govuk-table__cell">
    <% unless @procurement.initial_call_off_period.nil? %>
      <%= format_date initial_call_off_period_end_date %>
    <% end %>
  </td>
  <td class="govuk-table__cell">
  </td>
</tr>
