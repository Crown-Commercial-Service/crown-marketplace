<div class="govuk-grid-row CCS-fm-supplier-filter-container-grey">
  <div class="govuk-grid-row CCS-fm-supplier-filter-container-grey">
    <strong class="govuk-heading-m govuk-!-margin-0 govuk-!-padding-1"><%= section_title %>
      <br/> <span class="govuk-!-font-size-19" id="<%= section_name %>-count"></span></strong>
  </div>
  <div class="govuk-grid-row CCS-fm-supplier-filter-container-grey">
    <div class="govuk-checkboxes" id="fm-region-check-boxes">
      <% collection.each do |item| %>
        <div class="govuk-checkboxes__item CCS-govuk-checkboxes__item">
          <%= check_box_tag(
                  "facilities_management_procurement[#{section_name}_codes][]",
                  item.code,
                  superset.include?(item.code),
                  class: "govuk-checkboxes__input",
                  id: "facilities_management_procurement_#{section_name}_codes_#{section_name}_#{item.code}"
              )
          %>
          <label class="govuk-label govuk-checkboxes__label CCS-govuk-checkboxes__label" for="#{section_name}_<%= item.code %>">
            <%= item.name %>
          </label>
        </div>
      <% end %>
    </div>
  </div>
  <div class="govuk-grid-row govuk-!-padding-1 CCS-fm-supplier-filter-container-grey">
    <%= link_to change_title, nil, class: 'govuk-link' %>
  </div>
</div>