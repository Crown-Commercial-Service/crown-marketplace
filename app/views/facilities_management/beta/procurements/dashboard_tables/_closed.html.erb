<table class="govuk-table">
  <% if !@closed_contracts.empty? %>
    <thead class="govuk-table__head">
      <tr class="govuk-table__row">
        <th class="govuk-table__header govuk-!-font-weight-bold" scope="col" width="25%">Contract name</th>
        <th class="govuk-table__header govuk-!-font-weight-bold" scope="col" width="20%">Supplier</th>
        <th class="govuk-table__header govuk-!-font-weight-bold" scope="col" width="15%">Date closed</th>
        <th class="govuk-table__header govuk-!-font-weight-bold" scope="col" width="15%"></th>
        <th class="govuk-table__header govuk-!-font-weight-bold" scope="col" width="25%"></th>
      </tr>
    </thead>
    <tbody class="govuk-table__body">
      <% @closed_contracts.each do |closed_contract| %>
        <tr class="govuk-table__row">
          <th class="govuk-table__header govuk-!-padding-right-2" scope="row">
            <%= link_to closed_contract.contract_name, facilities_management_beta_procurement_path(closed_contract) %>
          </th>
          <td class="govuk-table__cell govuk-!-padding-right-2"><%= closed_contract.procurement_suppliers.first.supplier.data['supplier_name'] %></td>
          <td class="govuk-table__cell govuk-!-padding-right-2"><%= format_date(closed_contract.closed_contract_date) %></td>
          <td class="govuk-table__cell govuk-!-padding-right-2"></td>
          <td class="govuk-table__cell govuk-!-padding-right-2"></td>
        </tr>
      <% end %>
  </tbody>
  <% else %>
    <hr class="govuk-section-break govuk-section-break--visible">
      <span class="govuk-hint govuk-!-margin-top-3"> <%= t('.no_closed') %></span>
    <hr class="govuk-section-break govuk-section-break--visible">
  <% end %>
</table> 
