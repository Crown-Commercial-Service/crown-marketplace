<%= link_to 'Back', facilities_management_beta_procurements_url, class: "govuk-back-link govuk-!-margin-bottom-5" %>
<%if @delete %>
  <div class="govuk-warning-text">
    <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
    <strong class="govuk-warning-text__text">
      <span class="govuk-warning-text__assistive">Warning</span>
      <%= t('.delete_message') %>
    </strong>
  </div>
<%end %>
<span class="govuk-caption-l govuk-!-padding-top-0"><%= t('.search_result') %></span>
<h1 class="govuk-heading-xl govuk-!-padding-top-0"><%= @procurement.name %></h1>
<p><%= t('.search_show_body_html') %></p>
<div class="govuk-!-margin-top-5 govuk-!-margin-bottom-5">
  <%if @change %>
    <h2 class="govuk-heading-m"><%= t('.continue_to_procurement') %></h2>
    <p><%= t('.continue_body_html') %></p>
    <%= render partial:'edit_procurement', locals: {delete: @delete, change: @change} %>
  <%else %>
    <%= render partial:'destroy_procurement', locals: {delete: @delete, change: @change} %>
  <%end %>
</div>
<div class="govuk-!-margin-top-5 ccs-no-print">
  <a id="print-short-list" href="" class="govuk-link--no-visited-state print-page">Print this page</a>
</div>

