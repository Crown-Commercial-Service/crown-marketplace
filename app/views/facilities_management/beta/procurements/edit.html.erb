<%= form_for @procurement, url: facilities_management_beta_procurement_path(@procurement), method: :patch, html: { multipart: true }  do |f| %>
  <%= govuk_form_group_with_optional_error(@procurement, :name) do %>
      <%= display_errors(@procurement, :name) %>
      <%= f.label :name, class: "govuk-label" %>
      <%= f.text_field :name %>
    <% end %>
  <%= f.submit 'Update', class: 'govuk-button' %>
<% end %>
