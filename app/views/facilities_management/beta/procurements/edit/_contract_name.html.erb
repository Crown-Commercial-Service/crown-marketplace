<h1 class="govuk-heading-xl govuk-!-padding-top-0 govuk-!-margin-0">Contract name</h1>
<% content_for :page_title, 'Contract name' %>
<div class="govuk-form-group <%='govuk-form-group--error' if @procurement.errors[:contract_name].any? %>" data-propertyname="Contract name"
     style="<%= 'padding-left:1em' if @procurement.errors[:contract_name].any?%>">
  <div class="govuk-character-count" data-module="character-count" data-maxlength="100">
    <legend class="govuk-fieldset__legend govuk-!-margin-top-5 govuk-fieldset__legend--m govuk-!-font-weight-bold">
        <h1 class="govuk-fieldset__heading">
          <%= t('.contract_name_question') %>
        </h1>
    </legend>

    <span id="with-hint-hint" class="govuk-hint">
      <%= t('.contract_name_info') %>
    </span>

    <%= display_errors(@procurement, :contract_name)%>
    <%= f.label :contract_name, 'Contract name', class: "govuk-label" %>
    <%= f.text_field :contract_name, class: 'govuk-input govuk-input--width-30 js-character-count', required: true, maxlength: 100, "aria-describedby": "facilities_management_procurement_contract_name"%>
  </div>
</div>
