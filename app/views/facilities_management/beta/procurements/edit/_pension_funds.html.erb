<%= govuk_page_content(@page_description, @page_data[:model_object]) do |pd|%>
    <h1 class="govuk-heading-m">
        <%= t('.heading') %>
    </h1>
    <div class="govuk-hint govuk-!-width-one-half">
        <%= t('.description') %>
    </div>
    <h1 class="govuk-heading-m">
        <%= t('.form_title') %>
    </h1>
    <div id="pension-funds" class='fields'>
        <%= f.fields_for :procurement_pension_funds, sort_by_pension_fund_created_at do |builder| %>
            <%= render("facilities_management/beta/procurements/edit/procurement_pension_fund", ff: builder) %>
        <% end %>
    </div>
    <%= link_to_add_row("Add another pension fund (#{FacilitiesManagement::Procurement::MAX_NUMBER_OF_PENSIONS - @procurement.procurement_pension_funds.size} remaining)", f, :procurement_pension_funds, class: 'add-pension-button govuk-button govuk-button--secondary govuk-!-margin-bottom-2', 'aria-labelledby': 'Add another pension fund') %>
    <%= govuk_continuation_buttons(pd, f, false) %>
<% end %>