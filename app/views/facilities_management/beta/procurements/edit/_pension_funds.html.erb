<%= govuk_page_content(@page_description, @page_data[:model_object]) do |pd|%>
    <h1 class="govuk-heading-m">
        How many pension funds are involved?
    </h1>
    <div class="govuk-hint govuk-!-width-one-half">
        For each pension fund, please enter the name of each fund, and the percentage (%) of pensionable pay for those who are a memeber of that fund.
    </div>
    <h1 class="govuk-heading-m">
        List of pension funds
    </h1>
    <div id="pension-funds" class='fields'>
        <%= f.fields_for :procurement_pension_funds do |builder| %>
            <%= render("facilities_management/beta/procurements/edit/procurement_pension_fund", ff: builder) %>
        <% end %>
    </div>
    <%= link_to_add_row('Add another pension fund', f, :procurement_pension_funds, class: 'add-pension-button govuk-button govuk-button--secondary govuk-!-margin-bottom-2') %>
    <%= govuk_continuation_buttons(pd, f, false) %>
<% end %>