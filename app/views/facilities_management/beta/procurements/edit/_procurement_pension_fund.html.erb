<div class="pension-row govuk-body govuk-row govuk-!-margin-bottom-6">
    <span class="pension-name-error govuk-error-message govuk-visually-hidden">
        <span class="govuk-visually-hidden">Error:</span> Enter a pension fund name
    </span>
    <span class="pension-percentage-error govuk-error-message govuk-visually-hidden">
        <span class="govuk-visually-hidden">Error:</span> Enter a percentage of pensionable pay
    </span>
    <div class="govuk-grid-column-one-half govuk-!-margin-right-2 govuk-!-padding-left-0">
        <p class="govuk-!-margin-bottom-2">
            Pension fund name <span></span>
        </p>
        <p class="govuk-!-margin-bottom-0">
            <%= ff.text_field :name, class: 'pension-name govuk-input govuk-!-width-full', maxlength: 150 %>
        </p>
    </div>
    <div>
        <p class="govuk-!-margin-bottom-2">
            Percentage of pensionable pay 
        </p>
        <p class="govuk-!-margin-bottom-0">
            <%= ff.number_field :percentage, min: 1, max: 100, class: 'pension-percentage govuk-input govuk-input--width-4', maxlength: '3' %> %
            <%= link_to 'Remove', '#', class: 'remove-record govuk-button govuk-button--secondary govuk-!-margin-left-4 govuk-!-margin-bottom-0' %>
            <%= ff.text_field :_destroy, as: :hidden, class: 'pension-destroy-box govuk-visually-hidden' %>
        </p>
    </div>
</div>