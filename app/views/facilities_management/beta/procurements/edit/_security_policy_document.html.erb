<h1 class="govuk-heading-xl govuk-!-padding-top-0 govuk-!-margin-0"><%= t('.title') %></h1>
<div class="govuk-form-group <%= 'govuk-form-group--error' if @procurement.errors[:security_policy_document].any? %>" data-propertyname="security_policy_document"
    style="<%= 'padding-left:1em' if @procurement.errors[:security_policy_document].any?%>">
  <div class="govuk-!-margin-top-3">
    <span class="govuk-heading-s govuk-!-margin-bottom-0">
      <%= t('.question') %>
    </span>
  </div>

  <div class="govuk-!-margin-top-3">
    <%= display_potential_errors(@procurement, :security_policy_document, f.object_name)%>
    <div class="radio-content-toggle govuk-radios govuk-radios">
      <div class="govuk-radios__item">
        <%= f.radio_button :security_policy_document_required, true, class: "govuk-radios__input", required: true %>
        <%= f.label :security_policy_document_required, 'Yes', value: true, class: 'govuk-label govuk-radios__label' %>
        <div id="radio-inner-content" class="radio-inner-content govuk-!-margin-top-3 govuk-!-margin-bottom-3">
          <h2 class="govuk-heading-m govuk-!-margin-left-3"><%= t('.document_name') %></h2>
          <div class="govuk-!-margin-left-3" data-propertyname="Security policy document name">
            <%= f.label :security_policy_document_name, 'Describe buyer security policy document', class: "govuk-label" %>
            <%= display_potential_errors @procurement, :security_policy_document_name, f.object_name %>
            <%= f.text_field :security_policy_document_name, class: 'govuk-input govuk-input--width-20' %>
          </div>
          <h2 class="govuk-heading-m govuk-!-margin-left-3 govuk-!-margin-top-8"><%= t('.document_version_number') %></h2>
          <div class="govuk-!-margin-left-3" data-propertyname="Security policy document version number">
            <%= f.label :security_policy_document_version_number, 'Describe the version of the document', class: "govuk-label" %>
            <%= display_potential_errors @procurement, :security_policy_document_version_number, f.object_name %>
            <%= f.text_field :security_policy_document_version_number, class: 'govuk-input govuk-input--width-10' %>
          </div>
          <h2 class="govuk-heading-m govuk-!-margin-left-3 govuk-!-margin-top-8"><%= t('.document_date') %></h2>
          <div class="govuk-!-margin-left-3" data-propertyname="Security policy document date">
            <%= f.label :security_policy_document_date, 'Add the date when the security policy document was published. For example 31 3 2019', class: "govuk-label" %>
            <%= display_potential_errors @procurement, :security_policy_document_date, f.object_name %>
            <%= f.gov_uk_date_field :security_policy_document_date, legend_options: { page_heading: false, visually_hidden: true }, class: 'govuk-input govuk-input--width-20' %>
          </div>
          <h2 class="govuk-heading-m govuk-!-margin-left-3 govuk-!-margin-top-8"><%= t('.document') %></h2>
          <div class="govuk-!-margin-left-3" data-propertyname="Security policy document file">
            <%= f.label :security_policy_document_file, 'Upload a file', class: "govuk-label" %>
            <%= display_potential_errors @procurement, :security_policy_document_file, f.object_name %>
            <%= f.file_field :security_policy_document_file %>
            <div class="govuk-warning-text govuk-!-margin-top-3">
              <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
              <strong class="govuk-warning-text__text">
                <%= t('.guidance') %>
              </strong>
            </div>
          </div>
        </div>
      </div>
      <div class="govuk-radios__item">
        <%= f.radio_button :security_policy_document_required, false, class: 'govuk-radios__input', required: true %>
        <%= f.label :security_policy_document_required, 'No', value: false, class: "govuk-label govuk-radios__label" %>
      </div>
    </div>
  </div>
</div>
