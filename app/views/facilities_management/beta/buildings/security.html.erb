<%= govuk_page_content(@page_description, @page_data[:model_object], false, false, false) do |pd| %>
  <div class="govuk-!-width-two-thirds">
    <%= form_for @page_data[:model_object], url: facilities_management_beta_building_path(@page_data[:model_object].id), html: { specialvalidation: false, novalidate: true, multipart: true } do |f| %>
      <%= govuk_grouped_field(f, t('.select_security'), :type) do |ff, attr| %>
        <input type="hidden" name="step" value="security"/>
        <p class="govuk-caption-m"><%= t('security_description') %></p>
        <%= f.hidden_field :security_type %>
        <div class="govuk_radios">
          <% FacilitiesManagement::SecurityTypes.order(:sort_order).each do |security_type| %>
            <div class="govuk-radios__item">
              <%= ff.radio_button :security_type, security_type[:title], id: security_type[:id], class: 'govuk-radios__input' %>
              <%= ff.label :security_type, for: security_type[:id], class: 'govuk-label govuk-radios__label' do %>
                <%= security_type[:title] %>
                <span class="govuk-caption-m"><%= security_type[:description] %></span>
              <% end %>
            </div>
          <% end %>
        </div>
        <div class="govuk-body">
          Or
        </div>
        <%= govuk_start_individual_field(f, :other_security_type, {}, false, true, {}) do %>
          <div class="govuk-radios__item">
            <div class="other_container">
              <%= ff.radio_button :security_type, 'other', class: 'govuk-radios__input' %>
              <%= ff.label :security_type, 'other', class: 'govuk-label govuk-radios__label' do
                t('.other')
              end %>
              <div class="govuk-!-margin-top-2" style="margin-left:-1em">
                <div class="other_input ccs-character-count-container" data-module="character-count" data-maxlength="150" style="margin-left: 1.5ex">
                  <%= govuk_text_area_input(f, :other_security_type, true, ['rows', 3], ['maxlength', 150], [:class, '']) %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
      <%= govuk_continuation_buttons(pd, f, false, true, true, false, false, false) %>
      <p class="govuk-caption-m govuk-!-margin-top-3"><%= step_footer %></p>
    <% end %>
  </div>
<% end %>
