<%= govuk_page_content(@page_description, @page_data[:model_object], false, false, false) do |pd| %>
  <div>
    <%= link_to t('.create_new_button'), new_facilities_management_beta_building_path, class: "govuk-button ccs-no-print govuk-!-margin-bottom-6", role: "button" %>
    <%= link_to t('.procurements_dashboard_button'), facilities_management_beta_procurements_path, class: "govuk-button ccs-no-print govuk-button--secondary govuk-!-margin-left-3 govuk-!-margin-bottom-6", role: "button" %>
    <div class="govuk-body">
      <p class="govuk-body-l ">
        <%= t('.start_paragraph') %>
      </p>

      <p class="govuk-caption-m govuk-!-margin-top-6 govuk-margin-bottom-3">
        <%= t('.start_warning') %>
      </p>
    </div>
    <h2 class="govuk-heading-l govuk-!-margin-top-6"><%= t('.my_buildings_header') %></h2>
    <% if @page_data[:model_object].count.zero? %>
      <table class="govuk-!-width-three-quarters" style="border-collapse: collapse;">
        <thead>
        <tr>
          <th><span class="govuk-caption-m"><%= t('.no_buildings_text') %></span></th>
        </tr>
        </thead>
      </table>
    <% else %>
      <div class="govuk-table" data-module="table" id="fm-buildings-container">
        <table class="govuk-!-width-three-quarters">
          <thead>
          <tr>
            <th style="max-width:25%;"><%=t('.column_name_header') %></th>
            <th style="min-width:25%;"><%=t('.column_desc_header') %></th>
            <th style="min-width:12ex"><%=t('.column_lstup_header') %></th>
            <th><%=t('.column_status_header') %></th>
          </tr>
          </thead>
          <tbody class="govuk-table__body">
          <% @page_data[:model_object].each do |record| %>
            <% building = record['building_json'] %>
            <tr>
              <td><%= link_to building['name'].to_s, facilities_management_beta_building_path(record.id), class: 'govuk-link', 'aria-label' => t('.link_to_building_summary')%>
              </td>
              <td><%= building['description'].to_s.length > 0 ? building['description'].to_s : '-'%></td>
              <td><%= record['updated_at'].to_datetime.strftime("%d/%m/%Y") %><br /><%= record['updated_at'].to_datetime.strftime("%H:%M:%S")%></td>
              <td><%= record['status'].to_s %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
<% end %>
