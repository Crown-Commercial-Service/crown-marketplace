<div class="govuk-body">
  <div class="govuk-grid-row">
    <h1 class="govuk-caption-xl">You have chosen
      <span class="govuk-!-font-weight-bold" id="fm-selected-service-count">0</span>
      <span class="govuk-!-font-weight-bold"> services </span>
      so far</h1>
  </div>
  <div class="govuk-grid-row">
    <h1 class="govuk-caption-m">From the list of facilities management services required across your estate entered
      earlier, <br>now select all services, you need at this building.</h1>
  </div>
  <div class="govuk-grid-row govuk-!-margin-top-6">
    <div class="govuk-form-group">
      <fieldset class="govuk-fieldset">
        <div id="fm-buildings-selected-services" class="govuk-checkboxes fm-building-services-panel">
          <p>or</p>
          <div class="govuk-checkboxes__item">
            <input class="govuk-checkboxes__input" checked id="fm-select-all-services" name="fm-select-all-services" type="checkbox" value="fm-all-services">
            <label class="govuk-label govuk-checkboxes__label" for="fm_select_all-services">Select/Deselects all</label>
          </div>
        </div>
      </fieldset>
    </div>
  </div>
  <div class="govuk-grid-row govuk-!-margin-top-6">
    <%= form_tag '/facilities-management/select-services', id: 'fm-buldings-add-services-continue-link-form', method: :post do %>
      <%= hidden_field_tag 'current_choices', TransientSessionInfo[session.id].to_json %>

      <a onclick="document.getElementById('fm-buldings-add-services-continue-link-form').submit();" id="fm-buldings-add-services-continue-link" href="/facilities-management/select-services" class="govuk-link--no-visited-state  ccs-no-print" role="button">+
        Add new services</a>

      <!-- submit_tag '+ Add services', class: "govuk-link--no-visited-state ccs-no-print" -->
    <% end %>
  </div>
  <%= form_tag '/facilities-management/buildings-list', id: 'fm-select-services-continue-btn-form', method: :post do %>
    <%= hidden_field_tag 'current_choices', TransientSessionInfo[session.id].to_json %>
    <div class="govuk-grid-row govuk-!-margin-top-6">
      <a id="fm-select-services-continue-btn" href="" class="govuk-button ccs-no-print" role="button">Continue</a>
    </div>
  <% end %>
</div>


