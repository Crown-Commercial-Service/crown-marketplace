<div class="govuk-body">
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <a href="<%= request.referer %>" class="govuk-back-link">Back</a>
      <%= render('errors/inline_error_summary') %>
      <%= render('facilities_management/buildings/building_list') %>
    </div>
  </div>
  <% if @building_count > 0 %>
    <div class="govuk-grid-row">
      <%= form_tag '/facilities-management/contract-start', id: 'fm-buildings-list-form', method: :post do %>
        <%= hidden_field_tag 'current_choices', TransientSessionInfo[session.id].to_json %>
        <div class="govuk-grid-column-full govuk-!-margin-top-6">

          <!--
          <a id="fm-buildings-continue" href="/facilities-management/contract-start"
             class="govuk-button ccs-no-print" role="button">Continue</a>
          -->

          <%= submit_tag t('common.submit'), class: "govuk-button" %>

        </div>
      <% end %>
    </div>
  <% end %>
</div>