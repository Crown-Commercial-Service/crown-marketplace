<%= render('errors/inline_error_summary') %>
<div id="ccs-dynamic-accordian" class="govuk-grid-row">
  <%= form_tag @form_path, method: :get do %>
    <div class="govuk-grid-column-two-thirds">
      <%= hidden_fields_for_previous_steps_and_responses(@journey) %>
      <%= govuk_form_group_with_optional_error(@journey, :region_codes) do %>
        <%= govuk_fieldset_with_optional_error(@journey, :region_codes) do %>
          <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
            <span class="govuk-caption-m">
            </span>
            <h1 class="govuk-fieldset__heading">
              <%= t('.question') %>
            </h1>
            <span class="govuk-caption-m">
              <%= t('.subtitle') %>
            </span>
            <%= display_error(@journey, :region_codes) %>
          </legend>
          <div class="govuk-accordion" data-module="accordion" id="region-accordian">
            <% Nuts1Region.all.each do |nuts1_region| %>
              <div class="govuk-accordion__section">
                <div class="govuk-accordion__section-header">
                  <h2 class="govuk-accordion__section-heading ">
                    <span class="govuk-accordion__section-button" id="accordion-default-heading-<%= nuts1_region.code %>">
                      <%= nuts1_region.name %>
                    </span>
                  </h2>
                </div>
                <div class="govuk-accordion__section-content CCS-fm-region-filter-check-box-label">
                  <div class="govuk-form-group">
                    <div class="govuk-checkboxes">
                      <% Nuts2Region.where(nuts1_code: nuts1_region.code).each do |region| %>
                        <div class="govuk-checkboxes__item">
                          <%= check_box_tag(
                            "region_codes[]",
                            region.code,
                            @journey.current_step.regions.include?(region),
                            class: "govuk-checkboxes__input",
                            id: "region_#{region.code}"
                            ) %>
                          <label class="govuk-label govuk-checkboxes__label" for="region_<%= region.code %>">
                            <%= region.name %>
                          </label>
                        </div>
                      <% end %>
                      <p class="govuk-body govuk-!-margin-top-4">Or</p>
                        <div class="govuk-checkboxes__item ccs-select-all">
                        <input class="govuk-checkboxes__input" id="region_<%= nuts1_region.code %>-all" name="region_<%= nuts1_region.code %>-all" type="checkbox" value=""><!-- no value -->
                          <label class="govuk-label govuk-checkboxes__label" for="region_<%= nuts1_region.code %>-all">
                            Select all
                          </label>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
      <%= submit_tag t('common.submit'), class: "govuk-button" %>
    </div>
    <div class="govuk-grid-column-one-third govuk-!-margin-top-9">
      <div id="css-list-basket">
        <div>
          <h3 class="govuk-heading-m" data-txt01="<%= t('.regions_selected') %>" data-txt02="<%= t('.no_regions_selected') %>"><span></span> <span></span></h3>
          <a role="button" href="#" class="ccs-remove govuk-link--no-visited-state ccs-no-print" id="removeAll"><%= t('.remove_all') %></a>
          <ul class="govuk-list"></ul>
        </div>
      </div>
    </div>
  <% end %>
</div>
