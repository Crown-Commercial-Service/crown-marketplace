<%= content_for :page_title, t('.dashboard_header') %>
<div class="govuk-body">
  <div class="govuk-grid-row govuk-!-padding-left-3">
    <span class="govuk-caption-l"><%= @current_login_email %></span>
    <span class="govuk-heading-xl"><%= t('.dashboard_header') %></span>
    <h1 class="govuk-heading-m govuk-!-margin-0"><%= t('.dashboard_assessed_value') %></h1>
  </div>

  <hr class="govuk-section-break govuk-section-break--visible govuk-!-margin-bottom-5">
  <div class="govuk-grid-row govuk-!-margin-bottom-6">
    <%= account_dashboard_panel(t('.dashboard_average_rate'), edit_facilities_management_admin_service_rate_path(slug: 'average-framework-rates'), t('.dashboard_manage_rate')) %>
    <%= account_dashboard_panel(t('.dashboard_calloff_rate'), edit_facilities_management_admin_service_rate_path(slug: 'call-off-benchmark-rates'), t('.dashboard_manage_calloff_rate')) %>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-heading-m govuk-!-margin-top-5 govuk-!-margin-bottom-1"><%= t('.dashboard_supplier_data') %></span>
    </div>
  </div>
  <hr class="govuk-section-break govuk-section-break--visible govuk-!-margin-bottom-5">
  <div class="govuk-grid-row govuk-!-margin-bottom-6">
    <%= account_dashboard_panel(t('.dashboard_supplier_framework_data'), facilities_management_admin_supplier_framework_data_path, t('.dashboard_supplier_prices')) %>
    <%= account_dashboard_panel(t('.dashboard_supplier_details'), facilities_management_admin_supplier_details_path, t('.dashboard_manage_supplier_details')) %>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-third">
      <span class="govuk-heading-m govuk-!-margin-0"><%= t('.dashboard_management_report_header') %></span>
    </div>
  </div>
  <hr class="govuk-section-break govuk-section-break--visible govuk-!-margin-bottom-5">
  <div class="govuk-grid-row govuk-!-margin-bottom-6">
    <%= account_dashboard_panel(t('.dashboard_management_report_header'), new_facilities_management_admin_management_report_path, t('.dashboard_management_report_detail')) %>
  </div>
</div>
