<%= content_for :page_title, t("facilities_management.admin.service_rates.#{@slug}.heading") %>
<%= admin_breadcrumbs({ text: t("facilities_management.admin.service_rates.#{@slug}.heading") })%>

<%= render partial: 'shared/error_summary', locals: { errors: @errors } %>

<%= form_with url: facilities_management_admin_service_rate_path(slug: @slug), method: :put, html: { specialvalidation: true, novalidate: true }, local: 'false' do |f| %>
  <%= render partial: @slug, locals: { f: f } %>
  <%= f.submit t('.update_button'), class: 'govuk-button', name: 'update_benchmark_rates', aria: { label: t('.update_button') } %>
  <%= link_to t('.return_link'), facilities_management_admin_path, class: 'govuk-link govuk-caption-m'%>
<% end %>
