<%= form_group_with_error(f.object, :duns) do |displayed_error, any_errors| %>
  <%= f.label(:duns, t('.duns_question'), class: 'govuk-heading-m govuk-!-margin-bottom-0 govuk-!-padding-left-0') %>
  <%= displayed_error %>
  <%= f.text_field :duns, class: "govuk-input govuk-input--width-10 ccs-integer-field govuk-!-margin-top-2 #{'govuk-input--error' if any_errors }", maxlength: 9 %>
<% end %>

