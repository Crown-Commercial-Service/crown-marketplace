<%= govuk_input(
  :user_email,
  form: f,
  label: {
    text: t('.user_email_question'),
    classes: 'govuk-label--m'
  },
  hint: {
    text: capture do
      concat(tag.p(t('.email_must'), class: 'govuk-body govuk-!-margin-top-4'))
      concat(tag.ul(class: 'govuk-list govuk-list--bullet') do
        concat(tag.li(t('.email_must_1')))
        concat(tag.li(t('.email_must_2')))
        concat(tag.li(t('.email_must_3')))
      end)
    end
  },
  classes: 'govuk-input--width-20',
  field_type: :email
) %>
