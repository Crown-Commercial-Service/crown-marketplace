<%= govuk_input(
  :contact_name,
  form: f,
  label: {
    text: t('.contact_name_question'),
    classes: 'govuk-label--m'
  },
  classes: 'govuk-input--width-30',
  attributes: {
    maxlength: 100
  }
) %>

<%= govuk_input(
  :contact_email,
  form: f,
  label: {
    text: t('.contact_email_question'),
    classes: 'govuk-label--m'
  },
  hint: {
    text: t('.contact_email_info')
  },
  classes: 'govuk-input--width-20',
) %>

<%= govuk_input(
  :contact_phone,
  form: f,
  label: {
    text: t('.contact_phone_question'),
    classes: 'govuk-label--m'
  },
  classes: 'govuk-input--width-20',
) %>
