<% content_for :page_title, t('.buyer_account_dashboard') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl">
      <span class="govuk-caption-l"><%= @current_login_email %></span>
      <%= t('.buyer_account_title') %>
    </h1>
  </div>
</div>

<%= ccs_dashboard_section(
  [
    {
      title: t('.search_for_suppliers_link'),
      href: facilities_management_journey_question_path(slug: 'choose-services'),
      description: t('.search_for_suppliers_desc')
    },
    {
      title: t('.view_your_searches_link'),
      href: facilities_management_rm6232_procurements_path,
      description: t('.view_your_searches_desc')
    }
  ]
) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= link_to t('.manage_account_link'), facilities_management_buyer_detail_path(params[:framework], @buyer_detail), class: 'govuk-!-font-size-19 govuk-link govuk-link--no-visited-state' %>
    <p>
      <%= t('.manage_account_desc') %>
    </p>
    <p>
      <%= t('.further_information_help_html', fm_link: link_to(t('.further_information_link_description'), t('.further_information_link'), class: 'govuk-!-font-size-19 govuk-link govuk-link--no-visited-state', target: '_blank')) %>
    </p>
    <strong class="govuk-heading-s">
      <%= t('.return_to_page') %>
    </strong>
  </div>
</div>
