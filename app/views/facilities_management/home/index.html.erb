<% content_for :page_title, t('facilities_management.home.heading') %>

<div class="govuk-body">
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">
        <%= t('facilities_management.home.heading') %>
      </h1>
    </div>
  </div>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <p class="govuk-!-font-size-19"><%= t('facilities_management.home.subheading').html_safe %></p>
      <ul class="govuk-list govuk-list--bullet">
        <%= t('facilities_management.home.usagelist').html_safe %>
      </ul>

      <p class="govuk-!-font-size-24 ccs-font-weight-semi-bold"><%= t('facilities_management.home.beforeyoustart') %></p>
      <p class="govuk-!-font-size-19"><%= t('facilities_management.home.youneedtoknow') %></p>
      <ul class="govuk-list govuk-list--bullet">
        <%= t('facilities_management.home.startlist').html_safe %>
      </ul>

      <%= link_to t('facilities_management.home.startnow'), facilities_management_gateway_path, role: 'button', class: 'govuk-button govuk-button--start govuk-!-margin-top-2 govuk-!-margin-bottom-8', 'aria-label': "#{t('facilities_management.home.startnow')}'" %>
    </div>

    <div class="govuk-grid-column-one-third">
      <hr class="govuk-!-margin-bottom-5">

      <p class="govuk-!-font-size-24 ccs-font-weight-semi-bold"> How it works </p>
      <p>You can progress through these three steps:</p>

      <details class="govuk-details" data-module="govuk-details">
        <summary class="govuk-details__summary">
          <span class="govuk-details__summary-text">
            1. Quick search
          </span>
        </summary>
        <div class="govuk-details__text ">
          <div class="govuk-!-padding-bottom-3">
            <p class="ccs-font-weight-semi-bold govuk-!-margin-bottom-0">You will tell us</p>
          </div>
          <ul class="govuk-list govuk-list--bullet govuk-!-margin-bottom-0"><%= t('facilities_management.home.1_you_will_tell_us_html') %></ul>
          <div class="govuk-!-padding-top-3 govuk-!-padding-bottom-3">
            <p class="ccs-font-weight-semi-bold govuk-!-margin-bottom-0">We will tell you</p>
          </div>
          <ul class="govuk-list govuk-list--bullet govuk-!-margin-bottom-0"><%= t('facilities_management.home.1_we_will_tell_you_html') %></ul>
        </div>
      </details>

      <details class="govuk-details" data-module="govuk-details">
        <summary class="govuk-details__summary">
          <span class="govuk-details__summary-text">
            2. Detailed search
          </span>
        </summary>
        <div class="govuk-details__text ">
          <div class="govuk-!-padding-bottom-3">
            <p class="ccs-font-weight-semi-bold govuk-!-margin-bottom-0">You will tell us</p>
          </div>
          <ul class="govuk-list govuk-list--bullet govuk-!-margin-bottom-0"><%= t('facilities_management.home.2_you_will_tell_us_html') %></ul>
          <div class="govuk-!-padding-top-3 govuk-!-padding-bottom-3">
            <p class="ccs-font-weight-semi-bold govuk-!-margin-bottom-0">We will tell you</p>
          </div>
          <ul class="govuk-list govuk-list--bullet govuk-!-margin-bottom-0"><%= t('facilities_management.home.2_we_will_tell_you_html') %></ul>
        </div>
      </details>

      <details class="govuk-details" data-module="govuk-details">
        <summary class="govuk-details__summary">
          <span class="govuk-details__summary-text">
            3. Procurement options
          </span>
        </summary>
        <div class="govuk-details__text ">
          <div class="govuk-!-padding-bottom-3">
            <p class="ccs-font-weight-semi-bold govuk-!-margin-bottom-0">Direct award (if option is available)</p>
          </div>
          <ul class="govuk-list govuk-list--bullet govuk-!-margin-bottom-0"><%= t('facilities_management.home.3_DA_list_html') %></ul>
          <div class="govuk-!-padding-top-3 govuk-!-padding-bottom-3">
            <p class="ccs-font-weight-semi-bold govuk-!-margin-bottom-0">Further competition</p>
          </div>
          <ul class="govuk-list govuk-list--bullet govuk-!-margin-bottom-0"><%= t('facilities_management.home.3_FC_list_html') %></ul>
          <p class="govuk-!-margin-top-4">then offine:</p>
          <ul class="govuk-list govuk-list--bullet govuk-!-margin-bottom-0"><%= t('facilities_management.home.3_offline_list_html') %></ul>
        </div>
      </details>

      <p class="ccs-font-weight-semi-bold govuk-!-font-size-24 govuk-!-margin-top-6"> International coverage </p>
      <p>Please contact us for overseas services - email/phone details below.</p>

    </div>
  </div>
</div>
<script type="application/javascript">
    if (localStorage) {
        localStorage.clear();
    }

    if (sessionStorage) {
        sessionStorage.clear();
    }
</script>
