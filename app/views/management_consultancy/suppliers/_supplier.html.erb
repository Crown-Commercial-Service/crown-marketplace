<div class="mc-supplier-record">
  <div class="govuk-grid-row supplier-record__header-group">
    <div class="govuk-grid-column-full">
      <h2 class="govuk-heading-m govuk-!-font-size-27 mc-supplier-record__supplier-name"><%= supplier.name %></h2>
    </div>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half mc-supplier-record__contact-details">
      <h3 class="govuk-heading-s mc-supplier-record__contact-name mc-supplier-record__contact-item">
        <%= supplier.contact_name.present? ?
              supplier.contact_name :
              t('.contact_name_missing') %>
      </h3>
      <p class="govuk-body mc-supplier-record__contact-item">
        <%= supplier.contact_email.present? ?
              mail_to(supplier.contact_email, supplier.contact_email, 'aria-label': "Email #{supplier.contact_name} from #{supplier.name}") :
              t('.contact_email_missing') %>
      </p>
      <p class="govuk-body mc-supplier-record__contact-item">
        <%= supplier.telephone_number.present? ?
              format_telephone_number(supplier.telephone_number) :
              t('.telephone_number_missing') %>
      </p>
    </div>
  </div>
  <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
</div>
