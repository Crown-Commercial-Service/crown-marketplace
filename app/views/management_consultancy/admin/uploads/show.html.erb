<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <span id="passport-issued-error" class="govuk-error-message">
      <span class="govuk-visually-hidden">Error:</span> <%= @upload.fail_reason %>
    </span>
    <span class="govuk-caption-l govuk-!-margin-bottom-0"><%= t('.caption') %></span>
    <h1 class="govuk-heading-xl govuk-!-margin-bottom-4 cmp-page-heading"><%= t('.heading', number: @upload.short_uuid) %></h1>
    <table>
      <tbody>
      <tr>
        <td>
          <p class="govuk-body govuk-!-margin-bottom-0"><strong><%= t('.status') %></strong></p>
        </td>
        <td>
          <p class="govuk-body govuk-!-margin-bottom-0"><strong class="govuk-tag ccs-tag-<%= @upload.aasm_state %>"><%= @upload.aasm_state.humanize %></strong></p>
        </td>
      </tr>
      <tr>
        <td>
          <p><strong><%= t('.datetime') %></strong></p>
        </td>
        <td>
          <p><%= @upload.created_at.strftime('%m/%d/%Y @ %H:%M') %></p>
        </td>
      </tr>
      </tbody>
    </table>

    <table class="govuk-table govuk-!-margin-top-4">
      <caption class="govuk-table__caption"><%= t('.files') %></caption>
      <thead class="govuk-table__head">
        <tr class="govuk-table__row">
          <th class="govuk-table__header" scope="col"><%= t('.spreadsheet') %></th>
          <th class="govuk-table__header" scope="col"><%= t('.download') %></th>
        </tr>
      </thead>
      <tbody class="govuk-table__body">
      <% if @upload.suppliers.file.present? %>
        <tr class="govuk-table__row">
          <th class="govuk-table__header" scope="row"><%= t('.suppliers') %></th>
          <td class="govuk-table__cell"><%= link_to 'Download', @upload.suppliers_url %></td>
        </tr>
      <% end %>
      <% if @upload.supplier_service_offerings.file.present? %>
        <tr class="govuk-table__row">
          <th class="govuk-table__header" scope="row"><%= t('.supplier_service_offerings') %></th>
          <td class="govuk-table__cell"><%= link_to 'Download', @upload.supplier_service_offerings_url %></td>
        </tr>
      <% end %>
      <% if @upload.supplier_regional_offerings.file.present? %>
        <tr class="govuk-table__row">
          <th class="govuk-table__header" scope="row"><%= t('.supplier_regional_offerings') %></th>
          <td class="govuk-table__cell"><%= link_to 'Download', @upload.supplier_regional_offerings_url %></td>
        </tr>
      <% end %>
      <% if @upload.rate_cards.file.present? %>
        <tr class="govuk-table__row">
          <th class="govuk-table__header" scope="row"><%= t('.rate_cards') %></th>
          <td class="govuk-table__cell"><%= link_to 'Download', @upload.rate_cards_url %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <% if @upload.in_review? %>
      <p class="govuk-body govuk-!-margin-top-8"><%= t('.confirm_changes') %></p>
      <%= link_to "Approve and publish to live services", management_consultancy_admin_upload_approve_path(@upload), class: 'govuk-button' %>
      <%= link_to "Reject", management_consultancy_admin_upload_reject_path(@upload), class: 'govuk-button govuk-button--warning' %>
    <% end %>
  </div>
</div>
