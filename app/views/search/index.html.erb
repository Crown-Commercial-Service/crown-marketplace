<% if params[:nominated_worker].blank? %>
  <%= link_to 'Back', homepage_path, class: 'govuk-back-link' %>
  <%= render partial: 'nominated_worker_question' %>
<% else %>
  <%= link_to 'Back', search_path, class: 'govuk-back-link' %>
  <% if params[:nominated_worker] == 'yes' %>
    <%= render partial: 'school_postcode_question' %>
  <% else %>
    <%= render partial: 'non_nominated_worker_outcome' %>
  <% end %>
<% end %>
