<%= content_for :page_title, t(".heading") %>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

  <% unless flash[:error].nil? %>
    <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" data-module="error-summary">
      <h2 class="govuk-error-summary__title" id="error-summary-title">
        <%= t("common.error_summary_title") %>
      </h2>
      <div class="govuk-error-summary__body">
        <ul class="govuk-list govuk-error-summary__list">
          <li>
            <%= link_to flash[:error], "##{error_id('email')}" %>
          </li>
        </ul>
      </div>
    </div>
  <% end %>

    <h1 class="govuk-heading-xl">
      <%= t('.heading') %>
    </h1>

    <p class="govuk-body-l">
      <%= t('.lead') %>
    </p>

    <%= form_tag edit_password_path, class: 'ccs-form', id: 'cog_forgot_password_request_form', specialvalidation: true, novalidate: true, method: :post do %>

      <div class="govuk-form-group <%= 'govuk-form-group--error' unless flash[:error].nil? %>">
        <label class="govuk-label govuk-label--m govuk-!-margin-bottom-0" for="email">
          <%= t('.email') %>
        </label>

        <div id="email-hint" class="govuk-hint govuk-!-width-three-quarters">
          <%= t('.email_hint_html') %>
        </div>

        <% unless flash[:error].nil? %>
          <span id="<%= error_id('email') %>" class="govuk-error-message">
              <%= flash[:error] %>
          </span>
        <% end %>

        <input class="govuk-input govuk-!-width-three-quarters" id="email" name="email" type="email" aria-describedby="email-hint" autocomplete="off" spellcheck="false">
      </div>

      <%= submit_tag t('common.send_reset_email'), id: "submit", class: "govuk-button govuk-!-padding-left-7 govuk-!-padding-right-7", 'aria-label': "#{t('common.send_reset_email')}" %>
    <% end %>
  </div>
</div>
