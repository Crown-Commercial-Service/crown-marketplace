<div class= 'govuk-!-width-three-quarters govuk-body'>
  <h1 class='govuk-heading-l'>
    <%= t('.heading') %>
  </h1>

  <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">

  <%= render(partial: 'home/accessibility/accessibility_statement', locals: { service: t('.service'), link: t('.marketplace_link'), zoom_required: true })%>

  <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">

  <div>
    <h2 class='govuk-heading-m'>
      <%= t('home.accessibility.heading_how_accessible') %>
    </h2>
    <p>
      <%= t('.we_know') %>
    </p>
  </div>

  <%= render 'home/accessibility/shared_section' %>

  <div>
    <h2 class='govuk-heading-m'>
      <%= t('home.accessibility.heading_non_accessible') %>
    </h2>
    <p>
      <%= t('.the_content') %>
    </p>
  </div>

  <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">

  <div>
    <h2 class='govuk-heading-m'>
      <%= t('home.accessibility.heading_how_we_tested') %>
    </h2>
    <p>
      <%= t('.compliance') %>
    </p>
  </div>

  <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">

  <%= render 'home/accessibility/not_in_scope' %>

  <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">

  <%= render(partial: 'home/accessibility/preparation_for_audit', locals: { date: t('.date') }) %>

  <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">

  <div>
    <h2 class='govuk-heading-m'>
      <%= t('.heading_how_we_tested') %>
    </h3>
    <p>
      <%= t('.website_last_tested') %>
    </p>
    <p>
      <%= t('.the_complete_journey') %>
    </p>
  </div>
</div>
