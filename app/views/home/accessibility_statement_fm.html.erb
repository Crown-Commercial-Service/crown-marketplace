    <div>
      <h3 class='govuk-heading-s'>
        <%= t('.page_optimisation_heading') %>
      </h3>
      <p>
        <%= t('.page_optimisation_issue') %>
      </p>
      <p>
        <%= t('.page_optimisation_this_falls') %>
      </p>
    </div>

    <hr class="govuk-section-break govuk-section-break--m">

    <div>
      <h3 class='govuk-heading-s'>
        <%= t('.insufficient_contrast') %>
      </h3>
      <p>
        <%= t('.insufficient_contrast_issue') %>
      </p>
      <p>
        <%= t('.insufficient_contrast_this_falls') %>
      </p>
    </div>
  </div>

  <hr class="govuk-section-break govuk-section-break--l">

  <div>
    <h2 class='govuk-heading-m'>
      <%= t('.heading_content_not_in_scope') %> 
