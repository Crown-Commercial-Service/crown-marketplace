    <div>
      <h3 class='govuk-heading-s'>
        <%= t('.pdfs_and_docs') %>
      </h3>
      <p>
        <%= t('.many_of_our_older') %>
      </p>
      <p>
        <%= t('.some_of_our') %>
      </p>
      <p>
        <%= t('.plan_to_fix') %>
      </p>
      <p>
        <%= t('.accessibility_regulations_1') %>
        <%= link_to t('.accessibility_regulations_link_text'), t('.accessibility_regulations_link'), class: 'govuk-link govuk-link--no-visited-state' %>
        <%= t('.accessibility_regulations_2') %>
      </p>
      <p>
        <%= t('.any_new_PDFs') %>
      </p>
    </div>
  </div>

  <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">

  <div>
    <h2 class='govuk-heading-m'>
      <%= t('.heading_preparation') %> 
    </h2>
    <p>
      <%= t('.this_statement_date') %>
    </p>

    <hr class="govuk-section-break govuk-section-break--m">

    <div>
      <h3 class='govuk-heading-s'>
        <%= t('.heading_how_we_tested') %> 
