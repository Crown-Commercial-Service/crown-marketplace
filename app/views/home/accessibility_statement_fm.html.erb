<div class= 'govuk-!-width-three-quarters govuk-body'>
  <h1 class='govuk-heading-l'>
    <%= t('.heading') %>
  </h1>

  <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">

  <div>
    <p>
      <%= t('.this_statement') %> <br>
      <%= link_to t('.market_place_link'), t('.market_place_link'), class: 'govuk-link govuk-link--no-visited-state' %>
    </p>
    <p>
      <%= t('.this_website') %>
    </p>
    <ul>
      <li> <%= t('.list_1_change_colours') %> </li>
      <li> <%= t('.list_1_navigate_keyboard') %> </li>
      <li> <%= t('.list_1_navigate_speach') %> </li>
      <li> <%= t('.list_1_navigate_listen') %> </li>
    </ul>
    <p>
      <%= t('.website_text_simple') %>
    </p>
    <p>
      <%= link_to t('.ability_net'), t('.ability_net_link'), class: 'govuk-link govuk-link--no-visited-state' %> has advice on making your device easier to use if you have a disability.
    </p>
  </div>

  <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">

  <div>
    <h2 class='govuk-heading-m'>
      <%= t('.heading_how_accessible') %>
    </h2>
    <p>
      <%= t('.we_know') %>
    </p>
    <ul>
      <li> <%= t('.list_2_text_reflow') %> </li>
      <li> <%= t('.list_2_contrast') %> </li>
      <li> <%= t('.list_2_page_view') %> </li>
      <li> <%= t('.list_2_contrast_ratio') %> </li>
    </ul>
  </div>

  <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">

  <div>
    <h2 class='govuk-heading-m'>
      <%= t('.heading_what_to_do') %>
    </h2>
    <p>
      <%= t('.if_you_need') %>
    </p>
    <ul>
      <li> <%= t('.email') %> <%= mail_to t('.email_link'), t('.email_link'), class: 'govuk-link govuk-link--no-visited-state' %> </li>
      <li> <%= t('.call') %> </li>
    </ul>
    <p>
      <%= t('.well_consider') %>
    </p>
  </div>

  <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">

  <div>
    <h2 class='govuk-heading-m'>
      <%= t('.heading_reporting') %>
    </h2>
    <p>
      <%= t('.we_are_always_looking_html', email: mail_to(t('.email_link'),  t('.email_link'), class: 'govuk-link govuk-link--no-visited-state')) %>
    </p>
  </div>

  <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">

  <div>
    <h2 class='govuk-heading-m'>
      <%= t('.heading_enforcement') %>
    </h2>
    <p>
      <%= t('.equality') %>
      <%= link_to t('.equality_link_text'), t('.equality_link'), class: 'govuk-link govuk-link--no-visited-state' %>.
    </p>
  </div>

  <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">

  <div>
    <h2 class='govuk-heading-m'>
      <%= t('.heading_technical_information') %>
    </h2>
    <p>
      <%= t('.CCS_is_committed') %>
    </p>
    <p>
      <%= t('.this_website_partially_1') %>
