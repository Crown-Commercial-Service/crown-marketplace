<%= add_optional_error_prefix_to_page_title(@journey.errors) %>
<%= content_for :page_title, t('.page_title') %>
<%= content_for :page_section, t('supply_teachers.page_section') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render partial: 'shared/error_summary', locals: { errors: @journey.errors } %>
    <%= form_tag @form_path, method: :get do %>
      <%= hidden_fields_for_previous_steps_and_responses(@journey) %>
      <%= govuk_form_group_with_optional_error(@journey, :fixed_term_fee) do %>
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
          <h2 class="govuk-fieldset__heading">
            <label for="fixed_term_fee">
              <%= t('.fixed_term_fee_question') %>
            </label>
          </h2>
        </legend>
        <%= display_error(@journey, :fixed_term_fee) %>
        <div class="calculator-form__day-rate">
          <%= text_field_tag :fixed_term_fee, params[:fixed_term_fee], class: css_classes_for_input(@journey, :fixed_term_fee, ['govuk-input--width-10 calculator-form__day-rate-input']) %>
          <i class="govuk-body calculator-form__day-rate-icon"><%= t('.fixed_term_fee_icon') %></i>
        </div>
      <% end %>

      <%= submit_tag t('common.submit'), class: "govuk-button" %>
    <% end %>
  </div>
  <div class="govuk-grid-column-one-third">
  </div>
</div>
