<%= add_optional_error_prefix_to_page_title(@journey.errors) %>
<%= content_for :page_title, 'Do you want an agency to supply the worker?' %>
<%= content_for :page_section, 'Find supply teachers and agency workers' %>

<%= render partial: 'shared/error_summary', locals: { errors: @journey.errors } %>
<%= form_tag @form_path, method: :get do %>
  <%= hidden_fields_for_previous_steps_and_responses(@journey) %>
  <%= govuk_form_group_with_optional_error(@journey, :worker_type) do %>
    <%= govuk_fieldset_with_optional_error(@journey, :worker_type) do %>
      <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
        <h1 class="govuk-fieldset__heading">
          <%= t('.question') %>
        </h1>
      </legend>
      <%= display_error(@journey, :worker_type) %>
      <div class="govuk-radios">
        <div class="govuk-radios__item">
          <%= radio_button_tag :worker_type, :agency_supplied, checked?(params[:worker_type], 'agency_supplied'), class: 'govuk-radios__input' %>
          <%= label_tag :worker_type_agency_supplied, t('.answer_agency_supplied'), class: 'govuk-label govuk-radios__label' %>
        </div>
        <div class="govuk-radios__item">
          <%= radio_button_tag :worker_type, :nominated, checked?(params[:worker_type], 'nominated'), class: 'govuk-radios__input' %>
          <%= label_tag :worker_type_nominated, t('.answer_nominated_worker'), class: 'govuk-label govuk-radios__label' %>
        </div>
      </div>
    <% end %>
  <% end %>
  <%= submit_tag t('common.submit'), class: "govuk-button" %>
<% end %>
