<%= content_for :page_title, t('.page_title') %>
<%= content_for :page_section, t('supply_teachers.page_section') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl govuk-!-margin-bottom-3 cmp-page-heading"><%= t('.header') %></h1>

    <p class="govuk-body govuk-!-margin-bottom-8"><%= t('.results_found_with_location_html', results:@branches_count) %></p>
    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
    <%= render partial: 'branch', collection: @branches %>
    <%= paginate @branches, views_prefix: 'shared', window: 0, outer_window: 2 %>
  </div>
</div>
