<h2>Confirm token</h2>

<%= form_tag supply_teachers_users_confirm_path, method: :post do %>

  <div class="field">
    <%= label_tag :confirmation_code %><br />
    <%= text_field_tag :confirmation_code %>
  </div>
  <% if params[:email] %>
    <%= hidden_field_tag :email, params[:email] %>
  <% else %>
    <div class="field">
      <%= label_tag :email %><br />
      <%= text_field_tag :email %>
    </div>
  <% end %>

  <div class="actions">
    <%= submit_tag %>
  </div>
<% end %>