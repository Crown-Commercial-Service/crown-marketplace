<%= content_for :page_section, t('supply_teachers.page_section') %>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-xl"><%= t('.title') %></h1>

      <div class="ccs-logo__dfe">
        <p class="govuk-body-s"><%= t('.supported_by') %></p>
        <%= image_tag('Department_for_Education.svg', alt: 'Department for Education', width: '145px;') %>
      </div>

      <p class="govuk-body"><%= t('.use_this_service_to.title') %></p>

      <ul class="govuk-list govuk-list--bullet">
        <li><%= t('.use_this_service_to.find_and_hire_a_worker') %></li>
        <li><%= t('.use_this_service_to.hire_a_specific_person') %></li>
        <li><%= t('.use_this_service_to.find_a_managed_service_provider') %></li>
        <li><%= t('.use_this_service_to.view_the_rates') %></li>
        <li><%= t('.use_this_service_to.create_a_shortlist') %></li>
        <li><%= t('.use_this_service_to.calculate_the_maximum') %></li>
        <li><%= t('.use_this_service_to.view_all_suppliers') %></li>
      </ul>

      <p class="govuk-body">
        <%= t('.you_will_need_your_dfe_sign_in') %>
      </p>

      <%= link_to t('.start_now'), journey_start_path(journey: SupplyTeachers::Journey.journey_name), role: 'button', class: 'govuk-button govuk-button--start govuk-!-margin-top-2 govuk-!-margin-bottom-8', 'aria-label': t('.start_finding_supply_teachers') %>

      <h2 class="govuk-heading-m"><%= t('.before_you_start') %></h2>

      <p class="govuk-body"><%= t('.you_will_need_to_have') %></p>

      <ul class="govuk-list govuk-list--bullet">
        <li><%= t('.your_schools_postcode') %></li>
        <li><%= t('.details_of_how_long_you_want_the_worker') %></li>
      </ul>

      <p class="govuk-body"><%= t('.you_cant_use_the_service_if') %></p>

      <p class="govuk-body">
        <%= t('.to_find_permanent_teaching_staff_html', url: 'https://www.gov.uk/guidance/list-a-teaching-job-at-your-school-on-teaching-vacancies') %>
      </p>

      <h2 class="govuk-heading-m cmp-start-page__sub-heading"><%= t('.accreditation_of_agencies') %></h2>

      <p class="govuk-body"><%= t('.all_suppliers_have_undergone') %></p>

      <h2 class="govuk-heading-m cmp-start-page__sub-heading"><%= t('.buyers_obligations') %></h2>

      <p class="govuk-body"><%= t('.this_service_contains_pricing_information_html', url: 'https://www.gov.uk/guidance/deal-for-schools-hiring-supply-teachers-and-agency-workers') %></p>

      <p class="govuk-body"><%= t('.by_using_the_service') %></p>

      <p class="govuk-body"><%= t('.in_consideration_of_being_given_use') %></p>

      <ul class="govuk-list govuk-list--bullet">
        <li><%= t('.keep_the_information_confidential') %></li>
        <li><%= t('.only_use_the_information') %></li>
        <li><%= t('.make_sure_the_confidential_information') %></li>
        <li><%= t('.tell_ccs_if_suspect') %></li>
      </ul>

      <p class="govuk-body"><%= t('.you_must_tell_your_employees') %></p>

    </div>
  </div>
