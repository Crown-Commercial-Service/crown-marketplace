<%= govuk_cookie_banner(
  [
    {
      heading_text: t('.cookies_on_crown_marketplace'),
      text: capture do
        concat(tag.p(t('.we_use_some_essential_cookies')))
        concat(tag.p(t('.we_use_some_analytics_cookies')))
        concat(tag.div(govuk_warning_text(t('.cookies_not_saved')), id: 'cookie-settings-not-saved', hidden: ''))
      end,
      actions: [
        {
          text: t('.accept_cookies'),
          attributes: {
            id: 'accept-cookies',
            name: 'cookies',
            value: 'accept'
          },
        },
        {
          text: t('.reject_cookies'),
          attributes: {
            id: 'reject-cookies',
            name: 'cookies',
            value: 'reject'
          },
        },
        {
          text: t('.view_cookies'),
          href: cookie_policy_path,
          classes: 'govuk-link--no-visited-state'
        },
      ],
      attributes: {
        id: 'cookie-options-container'
      }
    },
    {
      text: capture do
        concat(t('.cookies_accepted'))
        concat(t('.change_cookie_settings_html', cookie_settings_link:  link_to(t('.change_cookie_settings_link'), cookie_settings_path, class: 'govuk-link govuk-link--no-visited-state')))
      end,
      attributes: {
        id: 'cookies-accepted-container',
        hidden: true
      }
    },
    {
      text: capture do
        concat(t('.cookies_rejected'))
        concat(t('.change_cookie_settings_html', cookie_settings_link:  link_to(t('.change_cookie_settings_link'), cookie_settings_path, class: 'govuk-link govuk-link--no-visited-state')))
      end,
      attributes: {
        id: 'cookies-rejected-container',
        hidden: true
      }
    }
  ]
) %>
