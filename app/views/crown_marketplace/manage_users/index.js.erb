<% if @search[:error] %>
  if ($("#email-error").length === 0) {
    $("#email-form-group").addClass("govuk-form-group--error");
    $("#email-hint").after("<%= escape_javascript(govuk_error_message(@search[:error], :email)) %>");
  }
<% else %>
  if ($("#email-error").length > 0) {
    $("#email-form-group").removeClass("govuk-form-group--error");
    $("#email-error").remove();
  }
<% end %>

$("#users-table").html("<%= escape_javascript(render(partial: 'users_table', locals: { users: @search[:users] })) %>");
