<%= govuk_checkboxes(
  :service_access,
  Cognito::Admin::Roles::SERVICE_ROLES_ACCESS.map do |service_access|
    {
      value: service_access,
      label: {
        text: t("crown_marketplace.service_access_map.#{service_access}.text")
      }
    }
  end,
  form: f,
  fieldset: {
    legend: {
      text: t('.legend'),
      classes: 'govuk-fieldset__legend--m'
    }
  },
  hint: {
    text: t('.hint')
  }
) %>
