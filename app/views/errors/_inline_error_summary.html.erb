<div id="inline-error-message" name="inline-error-message" class="govuk-error-summary govuk-visually-hidden" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="error-summary">
  <h2 class="govuk-error-summary__title" id="error-summary-title">
    <%= @inline_error_summary_title %>
  </h2>
  <div class="govuk-error-summary__body">
    <ul class="govuk-list govuk-error-summary__list">
      <li>
        <a id="error-summary-link" href="<%= @inline_error_summary_body_href %>"><%= @inline_summary_error_text %></a>
      </li>
    </ul>
  </div>
</div>
